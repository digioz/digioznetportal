@model digioz.Portal.Bo.Rss

@{
    ViewBag.Title = "Delete RSS";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2>Delete RSS Feed</h2>

            <p>Are you sure you want to delete this?</p>
            <div>
                <hr />
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.Name)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Name)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Url)
                    </dt>

                    <dd>
                        <a href="@Html.DisplayFor(model => model.Url)" target="_blank">@Html.DisplayFor(model => model.Url)</a>
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.MaxCount)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.MaxCount)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Timestamp)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Timestamp)
                    </dd>

                </dl>

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-actions no-color">
                        <input type="submit" value="Delete" class="btn btn-sm btn-primary" /> |
                        @Html.ActionLink("Back to List", "Index")
                    </div>
                }
            </div>
        </div>
    </div>
</div>


