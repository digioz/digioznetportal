@model digioz.Portal.Bo.Picture

@{
    ViewBag.Title = "Delete Picture";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2>Delete Picture</h2>

            <h3>Are you sure you want to delete this?</h3>
            <div>
                <hr />
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.Filename)
                    </dt>

                    <dd>
                        <a href="/img/Pictures/Full/@Model.Filename">
                            <img class="img-thumbnail" alt="120x120" style="width: 120px; height: 120px;" src="/img/Pictures/Thumb/@Model.Filename" />
                        </a>
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Description)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Description)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Timestamp)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Timestamp)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Approved)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Approved)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Visible)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Visible)
                    </dd>

                    <dt>
                        User
                    </dt>

                    <dt>
                        User
                    </dt>

                    <dd>
                        @ViewBag.User
                    </dd>

                    <dt>
                        Album Name
                    </dt>

                    <dd>
                        @ViewBag.Album
                    </dd>

                </dl>

                @using (Html.BeginForm("DeleteConfirmed", "PictureManager"))
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(model => model.Id)

                    <div class="form-actions no-color">
                        <input type="submit" value="Delete" class="btn btn-primary" /> |
                        @Html.ActionLink("Back to List", "PictureList")
                    </div>
                }
            </div>

        </div>
    </div>
</div>

