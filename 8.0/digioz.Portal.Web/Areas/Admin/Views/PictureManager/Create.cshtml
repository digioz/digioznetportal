@model digioz.Portal.Bo.Picture

@{
    ViewBag.Title = "Add Picture";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2>Add Picture</h2>

            @using (Html.BeginForm("CreatePosted", "PictureManager", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <p>&nbsp;</p>
                    <p>
                        You may upload multiple pictues at the same time by clicking on the file upload button, selecting 1 or more pictures and completing the fields below.
                        If you upload multiple pictures at the same time all pictures will be filed under the same Album for the same user and will have the same description.
                    </p>
                    <hr />
                    @Html.ValidationSummary(true)

                    <div class="form-group">
                        @Html.LabelFor(model => model.UserId, "UserId", new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.DropDownList("UserId", String.Empty)
                            @Html.ValidationMessageFor(model => model.UserId)
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.AlbumId, "AlbumId", new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.DropDownList("AlbumId", String.Empty)
                            @Html.ValidationMessageFor(model => model.AlbumId)
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="control-label col-md-2" style="font-weight:bold;">Picture</div>
                        <div class="col-md-10">
                            <input type="file" name="files" id="files" multiple="multiple" />
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Description, new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(model => model.Description, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Description)
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Approved, new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Approved)
                            @Html.ValidationMessageFor(model => model.Approved)
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Visible, new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Visible)
                            @Html.ValidationMessageFor(model => model.Visible)
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Create" class="btn btn-primary" />
                        </div>
                    </div>
                </div>
            }

            <div>
                @Html.ActionLink("Back to List", "PictureList")
            </div>
        </div>
    </div>
</div>


