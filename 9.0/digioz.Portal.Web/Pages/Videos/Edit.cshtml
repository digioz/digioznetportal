@page "{id:int}"
@model EditModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Edit Video";
}

<div class="container my-5">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            @if (Model.Item != null)
            {
                <h1 class="mb-4">Edit Video</h1>

                @if (!string.IsNullOrEmpty(Model.StatusMessage))
                {
                    <div class="alert alert-@(Model.IsSuccess ? "success" : "danger") alert-dismissible fade show" role="alert">
                        @Model.StatusMessage
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }

                <form method="post" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label for="AlbumId" class="form-label">Select Album *</label>
                        <select id="AlbumId" name="AlbumId" class="form-select" required>
                            <option value="">-- Select an Album --</option>
                            @foreach (var album in Model.Albums)
                            {
                                <option value="@album.Id" selected="@(Model.AlbumId == album.Id ? "selected" : null)">@album.Name</option>
                            }
                        </select>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Current Thumbnail</label>
                                @if (!string.IsNullOrEmpty(Model.Item.Thumbnail))
                                {
                                    <div class="border rounded p-2 bg-light text-center">
                                        <img src="/img/Videos/Thumb/@Model.Item.Thumbnail" 
                                             alt="Thumbnail" 
                                             style="max-width: 100%; max-height: 150px; object-fit: contain;" />
                                    </div>
                                }
                            </div>

                            <div class="mb-3">
                                <label for="ThumbnailFile" class="form-label">Replace Thumbnail (Optional)</label>
                                <input type="file" id="ThumbnailFile" name="ThumbnailFile" class="form-control" accept="image/*" />
                                <small class="text-muted">Leave blank to keep current thumbnail</small>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Current Video</label>
                                <div class="border rounded p-2 bg-light">
                                    <p class="mb-0"><small>@Model.Item.Filename</small></p>
                                </div>
                            </div>

                            <div class="mb-3">
                                <label for="VideoFile" class="form-label">Replace Video (Optional)</label>
                                <input type="file" id="VideoFile" name="VideoFile" class="form-control" accept="video/*" />
                                <small class="text-muted">Leave blank to keep current video</small>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="Description" class="form-label">Description</label>
                        <textarea id="Description" name="Description" class="form-control" rows="3">@Model.Description</textarea>
                    </div>

                    <div class="d-grid gap-2 d-sm-flex justify-content-sm-start">
                        <button type="submit" class="btn btn-primary">Save Changes</button>
                        <a href="/Videos/Details?id=@Model.Item.Id" class="btn btn-secondary">Cancel</a>
                    </div>
                </form>
            }
            else
            {
                <div class="alert alert-warning">Video not found.</div>
            }
        </div>
    </div>
</div>
