@page
@model digioz.Portal.Pages.Chat.IndexModel
@using System.Text.Encodings.Web
@using digioz.Portal.Utilities
@{
    ViewData["Title"] = "Chat";
    var enc = HtmlEncoder.Default;
}

<h2>Chat</h2>
<div class="mb-2 small text-muted">Signed in as: <strong>@Model.CurrentDisplayName</strong></div>

<div class="row">
    <div class="col-lg-9 col-md-8">
        <div class="card mb-3">
            <div class="card-body p-2" style="max-height:350px; overflow-y:auto;" id="chatContainer">
                <ul id="messagesList" class="list-unstyled mb-0">
                    @foreach (var m in Model.History)
                    {
                        var ts = m.Timestamp.HasValue ? m.Timestamp.Value.ToLocalTime().ToString("h:mm:ss tt") : "--";
                        string displayName = "Anonymous";
                        if (Model.DisplayNames.TryGetValue(m.UserId, out var name) && name != null)
                        {
                            displayName = name;
                        }
                        var encodedDisplayName = System.Net.WebUtility.UrlEncode(displayName);
                        var decodedMessage = System.Net.WebUtility.HtmlDecode(m.Message);
                        var messageWithBreaks = StringUtils.ConvertLineBreaksToHtml(enc.Encode(decodedMessage));
                        <li class="mb-2">
                            <span class="text-secondary" style="font-size:.7rem">@ts</span>
                            <a href="/Profile/Details?userId=@encodedDisplayName" class="fw-bold text-decoration-none">@displayName</a>: 
                            <span>@Html.Raw(messageWithBreaks)</span>
                        </li>
                    }
                </ul>
            </div>
        </div>

        <form id="chatForm" class="d-flex flex-column gap-2" autocomplete="off">
            <textarea id="messageInput" class="form-control" placeholder="Type message... (Shift+Enter for new line, Enter to send)" rows="3" style="resize: vertical;"></textarea>
            <div class="d-flex gap-2">
                <button id="sendButton" type="submit" class="btn btn-primary" disabled>Send</button>
                <small class="text-muted align-self-center">Press Enter to send, Shift+Enter for new line</small>
            </div>
        </form>
    </div>

    <div class="col-lg-3 col-md-4">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h6 class="mb-0">
                    <i class="fas fa-users"></i> Online Users (<span id="userCount">0</span>)
                </h6>
            </div>
            <div class="card-body p-2" style="max-height:350px; overflow-y:auto;">
                <ul id="userList" class="list-unstyled mb-0">
                    <li class="text-muted text-center py-2">Loading...</li>
                </ul>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/lib/signalr/dist/browser/signalr.min.js"></script>
    <script>
        const form = document.getElementById('chatForm');
        const input = document.getElementById('messageInput');
        const list = document.getElementById('messagesList');
        const container = document.getElementById('chatContainer');
        const sendBtn = document.getElementById('sendButton');
        const userList = document.getElementById('userList');
        const userCount = document.getElementById('userCount');
        
        function escapeHtml(str) { 
            return str.replace(/&/g,'&amp;').replace(/</g,'&lt;').replace(/>/g,'&gt;'); 
        }
        
        function decodeHtmlEntities(str) {
            var textarea = document.createElement('textarea');
            textarea.innerHTML = str;
            return textarea.value;
        }
        
        function formatMessageWithBreaks(message) {
            // Decode HTML entities first, then escape and add line breaks
            var decoded = decodeHtmlEntities(message);
            var escaped = escapeHtml(decoded);
            return escaped.replace(/\r\n/g, '<br />').replace(/\n/g, '<br />').replace(/\r/g, '<br />');
        }
        
        function updateUserList(users) {
            if (!users || users.length === 0) {
                userList.innerHTML = '<li class="text-muted text-center py-2">No users online</li>';
                userCount.textContent = '0';
                return;
            }
            
            userCount.textContent = users.length;
            userList.innerHTML = users.map(user => {
                const encodedUser = encodeURIComponent(user);
                return `<li class="py-1 px-2 border-bottom">
                    <i class="fas fa-circle text-success" style="font-size:0.5rem;"></i>
                    <a href="/Profile/Details?userId=${encodedUser}" class="text-decoration-none ms-1">${escapeHtml(user)}</a>
                </li>`;
            }).join('');
        }
        
        const connection = new signalR.HubConnectionBuilder().withUrl('/chatHub').withAutomaticReconnect().build();
        
        connection.on('ReceiveMessage', (displayName, message) => {
            const li = document.createElement('li');
            li.className = 'mb-2';
            const encodedDisplayName = encodeURIComponent(displayName);
            const formattedMessage = formatMessageWithBreaks(message);
            li.innerHTML = `<span class="text-secondary" style="font-size:.7rem">${new Date().toLocaleTimeString()}</span> <a href="/Profile/Details?userId=${encodedDisplayName}" class="fw-bold text-decoration-none">${escapeHtml(displayName)}</a>: <span>${formattedMessage}</span>`;
            list.appendChild(li);
            container.scrollTop = container.scrollHeight;
        });
        
        connection.on('UpdateUserList', (users) => {
            updateUserList(users);
        });
        
        connection.on('UserJoined', (displayName) => {
            const li = document.createElement('li');
            li.className = 'mb-2 text-muted fst-italic';
            li.innerHTML = `<span class="text-secondary" style="font-size:.7rem">${new Date().toLocaleTimeString()}</span> ${escapeHtml(displayName)} joined the chat`;
            list.appendChild(li);
            container.scrollTop = container.scrollHeight;
        });
        
        connection.on('UserLeft', (displayName) => {
            const li = document.createElement('li');
            li.className = 'mb-2 text-muted fst-italic';
            li.innerHTML = `<span class="text-secondary" style="font-size:.7rem">${new Date().toLocaleTimeString()}</span> ${escapeHtml(displayName)} left the chat`;
            list.appendChild(li);
            container.scrollTop = container.scrollHeight;
        });
        
        connection.start().then(() => { 
            sendBtn.disabled = false; 
            input.focus(); 
            // Scroll to bottom on load
            container.scrollTop = container.scrollHeight;
        }).catch(err => console.error(err));
        
        // Handle Enter key to send, Shift+Enter for new line
        input.addEventListener('keydown', e => {
            if (e.key === 'Enter' && !e.shiftKey) {
                e.preventDefault();
                form.dispatchEvent(new Event('submit'));
            }
        });
        
        form.addEventListener('submit', e => {
            e.preventDefault();
            const msg = input.value.trim();
            if(!msg) return;
            connection.invoke('SendMessage', msg).catch(err => console.error(err));
            input.value=''; 
            input.focus();
            // Reset textarea height after sending
            input.style.height = 'auto';
        });
        
        // Auto-resize textarea as user types
        input.addEventListener('input', function() {
            this.style.height = 'auto';
            this.style.height = (this.scrollHeight) + 'px';
        });
    </script>
}