@page "{id}"
@model digioz.Portal.Web.Pages.Store.DetailsModel
@using System.Security.Claims
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewBag.Title = Model.Product?.Name ?? "Product Details";
    Layout = "/Pages/Shared/_Layout.cshtml";
}

<div class="card bg-light mb-5">
    <div class="card-header bg-primary text-white">@ViewBag.Title</div>
    <div class="card-body">
        <div class="container mt-4">
            @if (Model.Product != null)
            {
                <div class="row mb-4">
                    <div class="col-12">
                        <a asp-page="Index" class="btn btn-sm btn-outline-secondary">
                            <i class="bi bi-arrow-left"></i> Back to Products
                        </a>
                    </div>
                </div>

                <div class="row">
                    <!-- Product Image -->
                    <div class="col-md-5">
                        <div style="background-color: #f8f9fa; padding: 20px; border-radius: 8px;">
                            @if (!string.IsNullOrEmpty(Model.Product.Image))
                            {
                                <img src="/img/Products/Full/@Model.Product.Image" alt="@Model.Product.Name" class="img-fluid rounded" />
                            }
                            else
                            {
                                <div style="height: 400px; display: flex; align-items: center; justify-content: center;">
                                    <div class="text-center text-muted">
                                        <i class="bi bi-image" style="font-size: 5rem;"></i>
                                        <p>No Image Available</p>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>

                    <!-- Product Details -->
                    <div class="col-md-7">
                        <h1>@Model.Product.Name</h1>

                        @if (!string.IsNullOrEmpty(Model.CategoryName))
                        {
                            <p class="text-muted">
                                <small>Category: <strong>@Model.CategoryName</strong></small>
                            </p>
                        }

                        <div class="mb-4">
                            <h3 class="text-primary">@Model.Product.Price.ToString("C")</h3>
                        </div>

                        @if (!string.IsNullOrEmpty(Model.Product.ShortDescription))
                        {
                            <p>@Model.Product.ShortDescription</p>
                        }

                        <!-- Product Information -->
                        <div class="card mb-4">
                            <div class="card-body">
                                @if (!string.IsNullOrEmpty(Model.Product.Sku))
                                {
                                    <p><strong>SKU:</strong> @Model.Product.Sku</p>
                                }
                                @if (!string.IsNullOrEmpty(Model.Product.Make))
                                {
                                    <p><strong>Make:</strong> @Model.Product.Make</p>
                                }
                                @if (!string.IsNullOrEmpty(Model.Product.Model))
                                {
                                    <p><strong>Model:</strong> @Model.Product.Model</p>
                                }
                                @if (!string.IsNullOrEmpty(Model.Product.Weight))
                                {
                                    <p><strong>Weight:</strong> @Model.Product.Weight</p>
                                }
                                @if (!string.IsNullOrEmpty(Model.Product.Dimensions))
                                {
                                    <p><strong>Dimensions:</strong> @Model.Product.Dimensions</p>
                                }
                                @if (Model.Product.UnitsInStock.HasValue)
                                {
                                    <p><strong>Units In Stock:</strong> @Model.Product.UnitsInStock</p>
                                }
                            </div>
                        </div>

                        <!-- Out of Stock Alert -->
                        @if (Model.Product.OutOfStock)
                        {
                            <div class="alert alert-warning">
                                <i class="bi bi-exclamation-triangle"></i> This product is currently out of stock.
                            </div>
                        }

                        <!-- Add to Cart -->
                        @if (User.Identity?.IsAuthenticated == true && !Model.Product.OutOfStock)
                        {
                            <button type="button" class="btn btn-primary btn-lg add-to-cart" data-product-id="@Model.Product.Id" data-product-name="@Model.Product.Name">
                                <i class="bi bi-cart-plus"></i> Add to Cart
                            </button>
                        }
                        else if (Model.Product.OutOfStock)
                        {
                            <button type="button" class="btn btn-secondary btn-lg" disabled>
                                <i class="bi bi-cart-plus"></i> Out of Stock
                            </button>
                        }
                        else
                        {
                            <a asp-page="/Identity/Account/Login" class="btn btn-primary btn-lg">
                                <i class="bi bi-person"></i> Login to Add to Cart
                            </a>
                        }
                    </div>
                </div>

                <!-- Product Description -->
                @if (!string.IsNullOrEmpty(Model.Product.Description))
                {
                    <div class="row mt-5">
                        <div class="col-12">
                            <h4>Description</h4>
                            <div class="card">
                                <div class="card-body">
                                    @Html.Raw(Model.Product.Description)
                                </div>
                            </div>
                        </div>
                    </div>
                }

                <!-- Product Options -->
                @if (Model.ProductOptions.Any())
                {
                    <div class="row mt-5">
                        <div class="col-12">
                            <h4>Product Options</h4>
                            <div class="table-responsive">
                                <table class="table table-sm">
                                    <thead class="table-light">
                                        <tr>
                                            <th>Type</th>
                                            <th>Value</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var option in Model.ProductOptions)
                                        {
                                            <tr>
                                                <td>@option.OptionType</td>
                                                <td>@option.OptionValue</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="alert alert-danger">
                    <p>Product not found.</p>
                </div>
                <a asp-page="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Back to Products
                </a>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.querySelectorAll('.add-to-cart').forEach(button => {
            button.addEventListener('click', function (e) {
                e.preventDefault();
                const productId = this.dataset.productId;
                const productName = this.dataset.productName;
                const button = this;
                const originalText = button.innerHTML;

                // Show loading state
                button.disabled = true;
                button.innerHTML = '<i class="bi bi-hourglass-split"></i> Adding...';

                fetch('/api/cart/add', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'X-CSRF-TOKEN': document.querySelector('input[name="__RequestVerificationToken"]')?.value || ''
                    },
                    body: JSON.stringify({
                        productId: productId,
                        quantity: 1
                    })
                })
                    .then(response => {
                        if (response.ok) {
                            // Success
                            button.innerHTML = '<i class="bi bi-check-circle"></i> Added!';
                            setTimeout(() => {
                                button.innerHTML = originalText;
                                button.disabled = false;
                            }, 1500);
                            
                            // Show success message
                            showNotification(`${productName} added to cart!`, 'success');
                        } else {
                            // Handle error responses
                            return response.json().then(data => {
                                throw new Error(data.message || 'Failed to add item to cart');
                            });
                        }
                    })
                    .catch(error => {
                        console.error('Error:', error);
                        button.innerHTML = originalText;
                        button.disabled = false;
                        showNotification(error.message || 'An error occurred while adding to cart', 'error');
                    });
            });
        });

        // Simple notification function
        function showNotification(message, type = 'info') {
            const alertClass = type === 'success' ? 'alert-success' : type === 'error' ? 'alert-danger' : 'alert-info';
            const icon = type === 'success' ? 'check-circle' : type === 'error' ? 'exclamation-circle' : 'info-circle';
            
            const alert = document.createElement('div');
            alert.className = `alert ${alertClass} alert-dismissible fade show position-fixed`;
            alert.style.cssText = 'top: 20px; right: 20px; z-index: 9999; min-width: 300px;';
            alert.innerHTML = `
                <i class="bi bi-${icon}"></i> ${message}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            `;
            
            document.body.appendChild(alert);
            
            // Auto-dismiss after 4 seconds
            setTimeout(() => {
                alert.remove();
            }, 4000);
        }
    </script>
}