@page
@model digioz.Portal.Web.Pages.Store.PayPalReturnModel
@{
    ViewData["Title"] = "Processing Payment";
}

<div class="card bg-light mb-5">
    <div class="card-header bg-primary text-white">@ViewBag.Title</div>
    <div class="card-body">
        <div class="container mt-5">
            <div class="row justify-content-center">
                <div class="col-md-8 text-center">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                    <h3 class="mt-3">Processing your PayPal payment...</h3>
                    <p class="text-muted">Please wait while we complete your order.</p>
                </div>
            </div>
        </div>
    </div>
</div>
