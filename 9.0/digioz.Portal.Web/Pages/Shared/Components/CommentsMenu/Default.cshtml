@model IEnumerable<digioz.Portal.Bo.Comment>
@using System.Text.RegularExpressions
@using digioz.Portal.Utilities
@using System.Text.Encodings.Web
@using System.Net
@{
    // Avatar map supplied by ViewComponent: Dictionary<string,string> userId -> avatar filename
    var avatarMap = ViewBag.AvatarMap as IDictionary<string,string> ?? new Dictionary<string,string>();
    // Display name map supplied by ViewComponent: Dictionary<string,string> userId -> display name
    var displayNameMap = ViewBag.DisplayNameMap as IDictionary<string,string> ?? new Dictionary<string,string>();
    
    // Create a unique ID for this comment section to avoid ID collisions when multiple instances exist on the same page
    // Use comprehensive sanitization to ensure valid HTML IDs (only alphanumeric, hyphens, and underscores)
    var rawId = $"{ViewBag.ReferenceType}_{ViewBag.ReferenceId}";
    var uniqueId = Regex.Replace(rawId, @"[^a-zA-Z0-9_-]", "_");
    
    // Ensure the ID starts with a letter (HTML requirement)
    if (!string.IsNullOrEmpty(uniqueId) && !char.IsLetter(uniqueId[0]))
    {
        uniqueId = "c_" + uniqueId;
    }

    // JavaScript-safe encoding for values injected into script blocks
    var jsUniqueId = JavaScriptEncoder.Default.Encode(uniqueId);
    var jsRecaptchaKey = JavaScriptEncoder.Default.Encode(ViewBag.RecaptchaPublicKey?.ToString() ?? string.Empty);
}

<div class="card mb-3" id="comments-root-@uniqueId">
    <div class="card-header d-flex justify-content-between align-items-center">
        <span>Comments (@Model.Count())</span>
        <button type="button" class="btn btn-info btn-sm" data-bs-toggle="collapse" data-bs-target="#collapse-@uniqueId" aria-expanded="false" aria-controls="collapse-@uniqueId">View</button>
    </div>

    <div id="collapse-@uniqueId" class="collapse hide">
        @if (!Model.Any())
        {
            <div class="card-body">
                <p class="text-muted small mb-0">No comments yet.</p>
                @if (User.Identity?.IsAuthenticated != true)
                {
                    <div class="mt-2">
                        <small class="text-muted fst-italic">Please log in to post comments.</small>
                    </div>
                }
            </div>
        }
        else
        {
            <ul class="list-group list-group-flush">
                @foreach (var comment in Model)
                {
                    // Sanitize avatar filename to prevent path traversal attacks
                    var rawAvatarFile = (comment.UserId != null && avatarMap.TryGetValue(comment.UserId, out var f) && !string.IsNullOrWhiteSpace(f)) ? f : "default.png";
                    var avatarFile = System.IO.Path.GetFileName(rawAvatarFile); // Remove any path components
                    
                    var displayName = (comment.UserId != null && displayNameMap.TryGetValue(comment.UserId, out var dn) && !string.IsNullOrWhiteSpace(dn)) ? dn : comment.Username;
                    var urlDisplayName = System.Uri.EscapeDataString(displayName ?? string.Empty);
                    
                    // HTML encode display name for safe output
                    var htmlDisplayName = WebUtility.HtmlEncode(displayName);
                    var htmlAvatarFile = WebUtility.HtmlEncode(avatarFile);
                    var htmlCommentId = WebUtility.HtmlEncode(comment.Id);
                    
                    <li class="list-group-item">
                        <div class="d-flex justify-content-between align-items-start">
                            <div class="d-flex align-items-start">
                                <div class="me-2">
                                    @if (comment.UserId != null)
                                    {
                                        <a href="/Profile/Details?userId=@urlDisplayName">
                                            <img src="/img/avatar/thumb/@htmlAvatarFile" class="rounded-circle" width="40" height="40" alt="@htmlDisplayName" />
                                        </a>
                                    }
                                    else
                                    {
                                        <img src="/img/avatar/thumb/default.png" class="rounded-circle" width="40" height="40" alt="avatar" />
                                    }
                                </div>
                                <div style="flex: 1;">
                                    <p class="mb-1" style="word-wrap: break-word;">@Html.Raw(StringUtils.ConvertLineBreaksToHtml(comment.Body))</p>
                                    <small class="text-muted">
                                        <a href="/Profile/Details?userId=@urlDisplayName">@htmlDisplayName</a> on @comment.ModifiedDate
                                    </small>
                                </div>
                            </div>
                            <div class="text-end">
                                <span class="small me-1">Likes (<b>@comment.Likes</b>)</span>
                                @if (User.Identity?.IsAuthenticated == true)
                                {
                                    <form action="/Comments/Like?id=@htmlCommentId" method="post" class="d-inline comment-like-form" data-comment-id="@htmlCommentId">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-outline-secondary p-0 like-btn" style="width:22px;height:22px;display:inline-flex;align-items:center;justify-content:center;line-height:1;" aria-label="Like">
                                            <img src="~/img/images/icons/20x20/Like.png" alt="Like" width="14" height="14" />
                                        </button>
                                    </form>
                                }
                            </div>
                        </div>
                    </li>
                }
            </ul>
        }

        @if (User.Identity?.IsAuthenticated == true)
        {
            var htmlReferenceId = WebUtility.HtmlEncode(ViewBag.ReferenceId?.ToString() ?? string.Empty);
            var htmlReferenceType = WebUtility.HtmlEncode(ViewBag.ReferenceType?.ToString() ?? string.Empty);
            var htmlUniqueId = WebUtility.HtmlEncode(uniqueId);
            
            <div class="card-body border-top">
                <form action="/Comments/Add" method="post" class="mt-3 comment-form" id="commentForm-@uniqueId" data-unique-id="@htmlUniqueId">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="referenceId" value="@htmlReferenceId" />
                    <input type="hidden" name="referenceType" value="@htmlReferenceType" />
                    <input type="hidden" class="recaptchaToken" name="recaptchaToken" />
                    <div class="mb-3">
                        <textarea name="comment" class="form-control" rows="3" placeholder="Your comments" maxlength="5000"></textarea>
                    </div>
                    <div class="d-flex justify-content-end">
                        <button type="submit" class="btn btn-info btn-sm">Post Comment</button>
                    </div>
                </form>
            </div>
        }
        else if (Model.Any())
        {
            <div class="card-body">
                <small class="text-muted fst-italic">Please log in to post comments.</small>
            </div>
        }
    </div>
</div>

@if (ViewBag.RecaptchaEnabled == true && !string.IsNullOrEmpty((string)ViewBag.RecaptchaPublicKey))
{
    <script src="https://www.google.com/recaptcha/api.js?render=@jsRecaptchaKey"></script>
}
<script>
(function(){
    const uniqueId = '@Html.Raw(jsUniqueId)';
    const recaptchaEnabled = @Json.Serialize(ViewBag.RecaptchaEnabled ?? false);
    const recaptchaPublicKey = '@Html.Raw(jsRecaptchaKey)';

    function showNotification(message, type = 'info') {
        const alertClass = type === 'success' ? 'alert-success' : type === 'error' ? 'alert-danger' : type === 'warning' ? 'alert-warning' : 'alert-info';
        const icon = type === 'success' ? 'check-circle-fill' : type === 'error' ? 'exclamation-circle-fill' : type === 'warning' ? 'exclamation-triangle-fill' : 'info-circle-fill';
        
        const alert = document.createElement('div');
        alert.className = `alert ${alertClass} alert-dismissible fade show position-fixed`;
        alert.style.cssText = 'top: 20px; right: 20px; z-index: 9999; min-width: 300px; max-width: 500px;';
        alert.innerHTML = `
            <i class="bi bi-${icon}"></i> ${message}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        `;
        
        document.body.appendChild(alert);
        
        setTimeout(() => {
            alert.remove();
        }, 5000);
    }

    function handleAjaxForm(form, beforeSend){
        if (form.dataset.handlerAttached === 'true') return;
        form.dataset.handlerAttached = 'true';
        
        form.addEventListener('submit', function(e){
            if (beforeSend) {
                const proceed = beforeSend(e);
                if (proceed === false) return;
            } else {
                e.preventDefault();
            }
            const data = new FormData(form);
            fetch(form.action, { method: 'POST', body: data, headers: { 'X-Requested-With': 'XMLHttpRequest' } })
                .then(response => response.json())
                .then(result => {
                    if (result.success) {
                        if (result.message) {
                            const notificationType = result.requiresApproval ? 'warning' : 'success';
                            showNotification(result.message, notificationType);
                        }
                        setTimeout(() => window.location.reload(), 1500);
                    } else {
                        showNotification(result.message || 'An error occurred', 'error');
                    }
                })
                .catch(() => { window.location.reload(); });
        });
    }

    const commentForm = document.getElementById('commentForm-' + uniqueId);
    if(commentForm){
        if(recaptchaEnabled && window.grecaptcha){
            handleAjaxForm(commentForm, function(e){
                e.preventDefault();
                grecaptcha.ready(function(){
                    grecaptcha.execute(recaptchaPublicKey, {action: 'comment'}).then(function(token){
                        commentForm.querySelector('.recaptchaToken').value = token;
                        const data = new FormData(commentForm);
                        fetch(commentForm.action, { method: 'POST', body: data, headers: { 'X-Requested-With': 'XMLHttpRequest' } })
                            .then(response => response.json())
                            .then(result => {
                                if (result.success) {
                                    if (result.message) {
                                        const notificationType = result.requiresApproval ? 'warning' : 'success';
                                        showNotification(result.message, notificationType);
                                    }
                                    setTimeout(() => window.location.reload(), 1500);
                                } else {
                                    showNotification(result.message || 'An error occurred', 'error');
                                }
                            })
                            .catch(() => window.location.reload());
                    });
                });
                return false;
            });
        } else {
            handleAjaxForm(commentForm);
        }
    }

    document.querySelectorAll('#comments-root-' + uniqueId + ' .comment-like-form').forEach(f=>{
        if (f.dataset.handlerAttached === 'true') return;
        f.dataset.handlerAttached = 'true';
        
        f.addEventListener('submit', function(e){
            e.preventDefault();
            const data = new FormData(f);
            fetch(f.action, { method: 'POST', body: data, headers: { 'X-Requested-With': 'XMLHttpRequest' } })
                .then(()=> window.location.reload())
                .catch(()=> window.location.reload());
        });
    });
})();
</script>


