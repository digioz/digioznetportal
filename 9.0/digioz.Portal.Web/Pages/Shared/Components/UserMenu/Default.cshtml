@using Microsoft.AspNetCore.Identity
@{
    var SignInManager = (SignInManager<IdentityUser>)ViewBag.SignInManager;
    var UserManager = (UserManager<IdentityUser>)ViewBag.UserManager;
}

<div class="card bg-light mb-3">
    <div class="card-header">User</div>
    <div class="card-body">
        @if (SignInManager.IsSignedIn(User))
        {
            <ul>
                <li class="nav-item">
                    <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                        <button type="submit" class="nav-link btn btn-link" style="padding: 0px;text-align:left;">Logout</button>
                    </form>
                </li>
                <li class="nav-item">@Html.ActionLink("My Account", "Manage", "Account", new { area = "Identity" }, null)</li>
                <li class="nav-item">@Html.ActionLink("My Profile", "Edit", "Profile", new { area = "" }, null)</li>
                <li class="nav-item">@Html.ActionLink("My Pictures", "Pictures", "Profile", new { area = "" }, null)</li>
                <li class="nav-item">@Html.ActionLink("My Videos", "Videos", "Profile", new { area = "" }, null)</li>
                <li class="nav-item">@Html.ActionLink("Private Messages", "Index", "PrivateMessages", new { area = "" }, null)</li>
                @if (User.IsInRole("Administrator"))
                {
                    <li class="nav-item">@Html.ActionLink("Admin Dashboard", "Index", "Home", new { area = "Admin" }, null)</li>
                }
            </ul>
            <p style="font-size:x-small;width:100%;text-align:center;">Logged in as @Html.ActionLink(@User.Identity.Name, "Index", "Profile", new { area = "" }).</p>
        }
        else
        {
            <ul>
                <li class="nav-item">
                    <a class="nav-link" asp-area="Identity" asp-page="/Account/Register" style="padding: 0px;text-align:left;">Register</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="Identity" asp-page="/Account/Login" style="padding: 0px;text-align:left;">Login</a>
                </li>
                <li class="nav-item">@Html.ActionLink("Forgot Password", "ForgotPassword", "Account", new { area = "Identity" }, null)</li>
            </ul>
        }
    </div>
</div>
