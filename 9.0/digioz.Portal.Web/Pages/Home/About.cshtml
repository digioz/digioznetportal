@page
@model AboutModel

@{
    ViewBag.Title = "About";
}

@section keywords {
    @if (Model != null && Model.PageContent.Keywords != null)
    {
        <meta name="keywords" content="@Model.PageContent.Keywords" />
    }
}

@section description {
    @if (Model != null && Model.PageContent.Description != null)
    {
        <meta name="description" content="@Model.PageContent.Description" />
    }
}

@{
    if (Model != null)
    {
        @Html.Raw(Model.PageContent.Body)
    }

    // Render comments section if enabled
    if (Model.AllowComments)
    {
        @await Component.InvokeAsync("CommentsMenu", new { referenceType = "PageContent", referenceId = Model.PageContent?.Id.ToString() })
    }
}