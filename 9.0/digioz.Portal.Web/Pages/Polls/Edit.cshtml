@page "{id}"
@model digioz.Portal.Pages.Polls.EditModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Edit Poll";
}

<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Item.Id" />
    <div class="mb-3">
        <label class="form-label">Poll Question</label>
        <input asp-for="Item.Slug" class="form-control" />
        <span asp-validation-for="Item.Slug" class="text-danger"></span>
    </div>
    <div class="form-check mb-2">
        <input class="form-check-input" asp-for="Item.Featured" />
        <label class="form-check-label" asp-for="Item.Featured"></label>
    </div>
    <div class="form-check mb-2">
        <input class="form-check-input" asp-for="Item.IsClosed" />
        <label class="form-check-label" asp-for="Item.IsClosed"></label>
    </div>
    <div class="form-check mb-3">
        <input class="form-check-input" asp-for="Item.AllowMultipleOptionsVote" />
        <label class="form-check-label" asp-for="Item.AllowMultipleOptionsVote"></label>
    </div>
    <div class="mb-3">
        <label class="form-label">Answers (comma separated)</label>
        <input asp-for="NewAnswersCsv" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a class="btn btn-secondary" asp-page="/Polls/Index">Cancel</a>
</form>
