@page
@model digioz.Portal.Pages.Polls.IndexModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, LazZiya.TagHelpers
@{
    ViewData["Title"] = "Polls";
    var isLoggedIn = !string.IsNullOrEmpty(Model.CurrentUserId);
}

<div class="card bg-light mb-5">
    <div class="card-header bg-primary text-white">@ViewBag.Title</div>
    <div class="card-body">
        @if (isLoggedIn)
        {
            <p><a class="btn btn-sm btn-primary" asp-page="/Polls/Add">Add Poll</a></p>
        }
        <div class="table-responsive">
            <table class="table table-sm table-striped align-middle">
                <thead>
                    <tr>
                        <th>Question</th>
                        <th>Status</th>
                        <th>Featured</th>
                        <th>Created</th>
                        <th>Closed</th>
                        <th class="text-end" style="width:260px">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Items.Any())
                    {
                        foreach (var p in Model.Items)
                        {
                            var isOwner = isLoggedIn && p.UserId == Model.CurrentUserId;
                            var isPublished = p.Visible == true && p.Approved == true;
                            <tr>
                                <td>@p.Slug</td>
                                <td>
                                    @if (isPublished)
                                    {
                                        <span class="badge bg-success">Published</span>
                                    }
                                    else if (isOwner)
                                    {
                                        @if (p.Visible != true)
                                        {
                                            <span class="badge bg-warning text-dark">Not Visible</span>
                                        }
                                        @if (p.Approved != true)
                                        {
                                            <span class="badge bg-warning text-dark">Pending Approval</span>
                                        }
                                    }
                                </td>
                                <td>@(p.Featured ? "Yes" : "No")</td>
                                <td>@p.DateCreated.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</td>
                                <td>@(p.IsClosed ? "Yes" : "No")</td>
                                <td class="text-end">
                                    <a class="btn btn-sm btn-outline-secondary" asp-page="/Polls/Details" asp-route-id="@p.Id">Details</a>
                                    @if (isOwner)
                                    {
                                        <a class="btn btn-sm btn-outline-primary" asp-page="/Polls/Edit" asp-route-id="@p.Id">Edit</a>
                                        <a class="btn btn-sm btn-outline-danger" asp-page="/Polls/Delete" asp-route-id="@p.Id">Delete</a>
                                    }
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr><td colspan="6" class="text-muted">No polls found.</td></tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="d-flex justify-content-between align-items-center mt-2">
            <small class="text-muted">Page @Model.PageNumber of @Model.TotalPages (@Model.TotalCount total)</small>
            <paging total-records="@Model.TotalCount"
                    page-no="@Model.PageNumber"
                    page-size="@Model.PageSize"
                    show-prev-next="true"
                    show-first-last="true"
                    query-string-key-page-no="PageNumber"
                    class="pagination mb-0">
                <route-values>
                    <rv key="PageSize" value="@Model.PageSize"></rv>
                </route-values>
            </paging>
        </div>
    </div>
</div>
