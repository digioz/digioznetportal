@page
@model digioz.Portal.Pages.Polls.AddModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Add Poll";
}

<div class="card bg-light mb-5">
    <div class="card-header bg-primary text-white">@ViewBag.Title</div>
    <div class="card-body">
        <form method="post" id="pollForm">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-3">
                <label class="form-label">Poll Question</label>
                <input asp-for="Item.Slug" class="form-control" maxlength="500" />
                <span asp-validation-for="Item.Slug" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <div class="d-flex justify-content-between align-items-center mb-2">
                    <label class="form-label mb-0">Answers</label>
                    <button type="button" class="btn btn-sm btn-outline-primary" id="addAnswerBtn">Add Answer</button>
                </div>
                <div id="answersContainer"></div>
                <input type="hidden" asp-for="NewAnswersCsv" id="answersCsv" />
                <span asp-validation-for="NewAnswersCsv" class="text-danger"></span>
                <small class="form-text text-muted">Add at least 2 answers (max 50). Each answer limited to 200 characters.</small>
                <div class="text-danger d-none" id="answersError">Please provide at least 2 answers.</div>
            </div>

            <div class="form-check mb-2">
                <input class="form-check-input" asp-for="Item.Featured" />
                <label class="form-check-label" asp-for="Item.Featured"></label>
            </div>
            <div class="form-check mb-2">
                <input class="form-check-input" asp-for="Item.IsClosed" />
                <label class="form-check-label" asp-for="Item.IsClosed"></label>
            </div>
            <div class="form-check mb-3">
                <input class="form-check-input" asp-for="Item.AllowMultipleOptionsVote" />
                <label class="form-check-label" asp-for="Item.AllowMultipleOptionsVote"></label>
            </div>
            <button type="submit" class="btn btn-primary">Create</button>
            <a class="btn btn-secondary" asp-page="/Polls/Index">Cancel</a>
        </form>
    </div>
</div>

<script>
(function() {
    const container = document.getElementById('answersContainer');
    const addBtn = document.getElementById('addAnswerBtn');
    const form = document.getElementById('pollForm');
    const csvInput = document.getElementById('answersCsv');
    const errorEl = document.getElementById('answersError');

    function createAnswerInput(value = '') {
        const wrapper = document.createElement('div');
        wrapper.className = 'input-group mb-2';

        const input = document.createElement('input');
        input.type = 'text';
        input.className = 'form-control';
        input.placeholder = 'Answer option';
        input.value = value;
        input.maxLength = 200;

        const btnGroup = document.createElement('div');
        btnGroup.className = 'input-group-append';

        const removeBtn = document.createElement('button');
        removeBtn.type = 'button';
        removeBtn.className = 'btn btn-outline-danger';
        removeBtn.textContent = 'Remove';
        removeBtn.addEventListener('click', function() {
            if (container.children.length > 2) {
                container.removeChild(wrapper);
            } else {
                alert('You must have at least 2 answers.');
            }
        });

        btnGroup.appendChild(removeBtn);
        wrapper.appendChild(input);
        wrapper.appendChild(btnGroup);
        return wrapper;
    }

    function addAnswer(value = '') {
        if (container.children.length >= 50) {
            alert('Maximum 50 answers allowed.');
            return;
        }
        container.appendChild(createAnswerInput(value));
    }

    addBtn.addEventListener('click', function() {
        addAnswer('');
    });

    // Seed two empty inputs by default
    addAnswer('');
    addAnswer('');

    form.addEventListener('submit', function(e) {
        const values = Array.from(container.querySelectorAll('input.form-control'))
            .map(i => i.value.trim())
            .filter(v => v.length > 0);

        if (values.length < 2) {
            e.preventDefault();
            errorEl.classList.remove('d-none');
            errorEl.textContent = 'Please provide at least 2 answers.';
            return;
        }

        if (values.length > 50) {
            e.preventDefault();
            errorEl.classList.remove('d-none');
            errorEl.textContent = 'Maximum 50 answers allowed.';
            return;
        }

        errorEl.classList.add('d-none');
        csvInput.value = values.join(',');
    });
})();
</script>