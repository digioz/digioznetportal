@page "{id:int}"
@model digioz.Portal.Web.Pages.PrivateMessages.DetailsModel
@{
    ViewData["Title"] = "Message Details";
}
<h1>@Model.RootMessage?.Subject</h1>

@if (Model.Thread.Any())
{
    <div>
        @foreach (var msg in Model.Thread)
        {
            <div class="card mb-2 @(msg.Id == Model.RootMessage.Id ? "border-primary" : "")">
                <div class="card-header">
                    <strong>From:</strong> @msg.FromDisplayName to @msg.ToDisplayName
                    <span class="float-end">@msg.SentDate?.ToLocalTime().ToString("g")</span>
                </div>
                <div class="card-body">
                    <pre style="white-space:pre-wrap">@msg.Message</pre>
                </div>
            </div>
        }
    </div>
}
<hr />
<h3>Reply</h3>
<form method="post">
    <input type="hidden" asp-for="Reply.ParentId" value="@Model.RootMessage.Id" />
    <div class="mb-3">
        <label asp-for="Reply.Subject" class="form-label"></label>
        <input asp-for="Reply.Subject" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Reply.Message" class="form-label"></label>
        <textarea asp-for="Reply.Message" rows="6" class="form-control"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Send Reply</button>
</form>
