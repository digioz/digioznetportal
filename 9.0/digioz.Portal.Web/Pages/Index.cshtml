@page
@model IndexModel

@{
    ViewBag.Title = "Home";
}

@section keywords {
    @if (Model.PageContent != null && Model.PageContent.Keywords != null)
    {
        <meta name="keywords" content="@Model.PageContent.Keywords" />
    }
}

@section description {
    @if (Model.PageContent != null && Model.PageContent.Description != null)
    {
        <meta name="description" content="@Model.PageContent.Description" />
    }
}

<!-- Render Slide Show if enabled  -->
<!-- Render Latest Pictures if enabled  -->
<!-- Render Latest Videos if enabled  -->
<!-- Render RSS Feed if enabled  -->
@{
    if (Model.PageContent != null)
    {
        @Html.Raw(Model.PageContent.Body)
    }

    // Render comments section if enabled
    if (Model.AllowComments)
    {
        <hr />
        <h4>Comments</h4>
        @await Component.InvokeAsync("CommentsMenu", new { referenceType = "PageContent", referenceId = Model.PageContent?.Id.ToString() })
	}
}