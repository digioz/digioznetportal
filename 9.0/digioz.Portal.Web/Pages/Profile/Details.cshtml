@page
@model digioz.Portal.Pages.Profile.DetailsModel
@{
    ViewData["Title"] = Model.DisplayName + " Profile";
    var avatar = (Model.UserProfile == null || string.IsNullOrEmpty(Model.UserProfile.Avatar)) ? "default.png" : Model.UserProfile.Avatar;
    var encodedDisplayName = System.Net.WebUtility.UrlEncode(Model.DisplayName ?? string.Empty);
}
<style>
    .comments-table td, .comments-table th { vertical-align: top; }
    .comments-table td.date-col { white-space: nowrap; width: 130px; }
    .comments-table td.ref-col { white-space: nowrap; width: 160px; }
    .comments-table td.comment-body { word-break: break-word; }
    @@media (min-width: 992px) {
        .comments-table td.comment-body { width: 60%; }
    }
    .media-thumb-wrapper { max-width:200px; }
    .media-thumb-wrapper img { width:100%; height:auto; max-width:200px; max-height:200px; object-fit:cover; }
</style>

<h2>@Model.DisplayName Profile Details</h2>

@if (Model.UserProfile == null)
{
    <p>Profile not found.</p>
}
else
{
    <div class="card mb-4 w-100">
        <div class="card-body d-flex flex-wrap">
            <div class="me-3 mb-3">
                <img src="/img/avatar/thumb/@avatar" alt="@Model.DisplayName" class="img-thumbnail" style="width:150px;height:150px;object-fit:cover;max-width:150px;" />
            </div>
            <div class="flex-grow-1">
                <h3 class="card-title">@Model.DisplayName</h3>
                <table class="table table-sm mb-0 w-auto">
                    <tbody>
                        <tr><th>City</th><td>@Model.UserProfile.City</td></tr>
                        <tr><th>State</th><td>@Model.UserProfile.State</td></tr>
                        <tr><th>Zip</th><td>@Model.UserProfile.Zip</td></tr>
                        <tr><th>Country</th><td>@Model.UserProfile.Country</td></tr>
                        @if (!string.IsNullOrEmpty(Model.ThemeName))
                        {
                            <tr><th>Theme</th><td>@Model.ThemeName</td></tr>
                        }
                        <tr>
                            <th>Signature</th>
                            <td>
                                @{
                                    var sig = Model.UserProfile.Signature ?? string.Empty;
                                    var encodedWithBreaks = System.Net.WebUtility.HtmlEncode(sig).Replace("\r\n", "<br />").Replace("\n", "<br />");
                                }
                                @Html.Raw(encodedWithBreaks)
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <h4>Recent Comments</h4>
    @if (!Model.RecentComments.Any())
    {
        <p>No comments found.</p>
    }
    else
    {
        <div class="table-responsive mb-4">
            <table class="table table-striped table-hover comments-table">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Comment</th>
                        <th>Reference</th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var c in Model.RecentComments)
                {
                    var dt = c.ModifiedDate ?? c.CreatedDate; // Use modified if exists, else created
                    <tr>
                        <td class="date-col">@(dt.HasValue ? dt.Value.ToString("yyyy-MM-dd HH:mm") : "")</td>
                        <td class="comment-body">@c.Body</td>
                        <td class="ref-col">@c.ReferenceType</td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    }

    <h4>Recent Pictures</h4>
    @if (!Model.RecentPictures.Any())
    {
        <p>No pictures found.</p>
    }
    else
    {
        <div class="row g-2 mb-2">
            @foreach (var pic in Model.RecentPictures)
            {
                <div class="col-6 col-md-4 col-lg-3">
                    <a href="/Pictures/Details/@pic.Id" class="d-block border rounded p-1 text-center bg-light media-thumb-wrapper">
                        <img src="/img/Pictures/Thumb/@pic.Thumbnail" alt="Picture @pic.Id" />
                    </a>
                </div>
            }
        </div>
        <div class="text-center mb-4">
            <a class="btn btn-sm btn-secondary" href="/Profile/Pictures?userId=@encodedDisplayName">View All Pictures</a>
        </div>
    }

    <h4 class="mt-4">Recent Videos</h4>
    @if (!Model.RecentVideos.Any())
    {
        <p>No videos found.</p>
    }
    else
    {
        <div class="row g-2 mb-2">
            @foreach (var vid in Model.RecentVideos)
            {
                <div class="col-6 col-md-4 col-lg-3">
                    <a href="/Videos/Details/@vid.Id" class="d-block border rounded p-1 text-center bg-light media-thumb-wrapper">
                        <img src="/img/Videos/Thumb/@vid.Thumbnail" alt="Video @vid.Id" />
                    </a>
                </div>
            }
        </div>
        <div class="text-center mb-4">
            <a class="btn btn-sm btn-secondary" href="/Profile/Videos?userId=@encodedDisplayName">View All Videos</a>
        </div>
    }
}