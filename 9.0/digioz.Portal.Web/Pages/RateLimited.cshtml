@page
@model digioz.Portal.Web.Pages.RateLimitedModel
@{
    ViewData["Title"] = "Rate Limit Exceeded";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-warning">
                <div class="card-header bg-warning text-dark">
                    <h4 class="mb-0">
                        <i class="bi bi-exclamation-triangle-fill"></i>
                        Rate Limit Exceeded
                    </h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning" role="alert">
                        <h5 class="alert-heading">Too Many Requests</h5>
                        <p class="mb-0">@Model.Reason</p>
                    </div>
                    
                    <p class="lead">
                        For security reasons, we limit the number of requests that can be made in a short period of time.
                    </p>
                    
                    <hr />
                    
                    <h5>What happened?</h5>
                    <p>
                        You've made too many requests to this page. This security measure helps protect our service 
                        from automated attacks and ensures fair access for all users.
                    </p>
                    
                    <h5>What can I do?</h5>
                    <ul>
                        <li>Please wait <strong>@Model.RetryAfter</strong> before trying again</li>
                        <li>If you're experiencing technical difficulties, please <a href="/Home/Contact">contact support</a></li>
                        <li>Make sure you're not refreshing or submitting forms too quickly</li>
                    </ul>
                    
                    <div class="alert alert-info mt-4" role="alert">
                        <strong>Note:</strong> This is a temporary restriction. Your access will be automatically 
                        restored after the waiting period.
                    </div>
                    
                    <div class="mt-4">
                        <a href="/" class="btn btn-primary">
                            <i class="bi bi-house-fill"></i> Return to Home
                        </a>
                        <a href="javascript:history.back()" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Go Back
                        </a>
                    </div>
                </div>
                <div class="card-footer text-muted">
                    If you believe this is an error, please contact our support team.
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Auto-reload after retry period (optional)
        // Values are parsed server-side to ensure accuracy
        var reloadSeconds = @(Model.AutoReloadSeconds != null ? Model.AutoReloadSeconds.Value.ToString() : "null");
        
        // Limit auto-reload to 5 minutes (300 seconds)
        // Longer bans shouldn't auto-reload to save resources
        if (reloadSeconds !== null && reloadSeconds <= 300) {
            setTimeout(function() {
                window.location.href = '/';
            }, reloadSeconds * 1000);
            
            console.log("Auto-reload scheduled in " + reloadSeconds + " seconds");
        }
    </script>
}
