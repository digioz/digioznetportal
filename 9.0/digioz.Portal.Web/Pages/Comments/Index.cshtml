@page
@model digioz.Portal.Web.Pages.Comments.IndexModel
@using digioz.Portal.Utilities
@using System.Text.Encodings.Web
@using System.Net
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, LazZiya.TagHelpers
@{
    ViewData["Title"] = "All Comments";
}

<div class="card bg-light mb-5">
    <div class="card-header bg-primary text-white">@ViewBag.Title</div>
    <div class="card-body">
        <div class="container my-5">
            <div class="row">
                <div class="col-12">
                    <h1 class="mb-4">All Comments</h1>

                    @if (!Model.Comments.Any())
                    {
                        <div class="alert alert-info">
                            No comments have been posted yet.
                        </div>
                    }
                    else
                    {
                        @foreach (var item in Model.Comments)
                        {
                            var htmlThumbnailUrl = WebUtility.HtmlEncode(item.ThumbnailUrl ?? string.Empty);
                            var htmlDetailsUrl = WebUtility.HtmlEncode(item.DetailsUrl ?? string.Empty);
                            var htmlAvatarUrl = WebUtility.HtmlEncode(item.AvatarUrl);
                            var htmlDisplayName = WebUtility.HtmlEncode(item.DisplayName);

                            <div class="card shadow-sm mb-4" style="max-width:900px;margin:0 auto;">
                                <div class="row g-0">
                                    <!-- Thumbnail Column -->
                                    <div class="col-md-3 bg-dark-subtle d-flex align-items-center justify-content-center p-3">
                                        @if (!string.IsNullOrEmpty(item.ThumbnailUrl) && !string.IsNullOrEmpty(item.DetailsUrl))
                                        {
                                            <a href="@htmlDetailsUrl" class="d-block">
                                                <img src="@htmlThumbnailUrl"
                                                     alt="Thumbnail"
                                                     class="img-fluid rounded"
                                                     style="max-height:180px;object-fit:contain;" />
                                            </a>
                                        }
                                        else
                                        {
                                            <div class="text-secondary" style="font-size:4rem;">
                                                <i class="bi bi-chat-left-text"></i>
                                            </div>
                                        }
                                    </div>

                                    <!-- Content Column -->
                                    <div class="col-md-9">
                                        <div class="card-body py-2">
                                            <!-- Header with Avatar, Name, Date, and Likes -->
                                            <div class="row align-items-center mb-2 pb-2 border-bottom">
                                                <div class="col-md-4 d-flex align-items-center">
                                                    <img src="@htmlAvatarUrl"
                                                         alt="Avatar"
                                                         class="rounded-circle me-2"
                                                         style="width:32px;height:32px;" />
                                                    <a href="/Profile/Details?userId=@Uri.EscapeDataString(item.DisplayName)" class="text-decoration-none fw-semibold">
                                                        @htmlDisplayName
                                                    </a>
                                                </div>
                                                <div class="col-md-5 text-muted small">
                                                    <i class="bi bi-clock me-1"></i>
                                                    @item.Comment.CreatedDate?.ToLocalTime().ToString("MM/dd/yyyy h:mm:ss tt")
                                                </div>
                                                <div class="col-md-3 text-end">
                                                    <span class="badge bg-primary">
                                                        <i class="bi bi-heart-fill me-1"></i>
                                                        @item.Comment.Likes Likes
                                                    </span>
                                                </div>
                                            </div>

                                            <!-- Comment Body -->
                                            <div class="comment-body py-2">
                                                <p class="mb-0" style="word-wrap: break-word;">@Html.Raw(StringUtils.ConvertLineBreaksToHtml(item.Comment.Body))</p>
                                            </div>
                                        </div>

                                        <!-- Footer with View Details Link -->
                                        <div class="card-footer bg-light text-center py-1">
                                            @if (!string.IsNullOrEmpty(item.DetailsUrl))
                                            {
                                                <a href="@htmlDetailsUrl" class="btn btn-sm btn-outline-primary">
                                                    <i class="bi bi-box-arrow-up-right me-1"></i>
                                                    View Details
                                                </a>
                                            }
                                            else
                                            {
                                                <span class="text-muted small">No details available</span>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }

                        @* Pagination *@
                        @if (Model.TotalPages > 1)
                        {
                            <div class="d-flex justify-content-between align-items-center mt-4" style="max-width:900px;margin:0 auto;">
                                <small class="text-muted">
                                    Page @Model.PageNumber of @Model.TotalPages
                                    <span class="badge bg-secondary">@Model.TotalCount total</span>
                                </small>
                                <paging total-records="@Model.TotalCount"
                                        page-no="@Model.PageNumber"
                                        page-size="@Model.PageSize"
                                        show-prev-next="true"
                                        show-first-last="true"
                                        query-string-key-page-no="pageNumber"
                                        class="pagination mb-0"></paging>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>
