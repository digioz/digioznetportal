@page "{id:int}"
@model digioz.Portal.Web.Areas.Admin.Pages.Link.DetailModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewBag.Title = "Link Detail";
    Layout = "/Areas/Admin/Pages/Shared/_LayoutAdmin.cshtml";
}

<div class="card shadow-sm">
    <div class="card-header d-flex justify-content-between align-items-center">
        <span>Link Detail</span>
        <a class="btn btn-sm btn-outline-secondary" asp-area="Admin" asp-page="/Link/Index">Back</a>
    </div>
    <div class="card-body">
        @if (Model.Item != null)
        {
            <dl class="row mb-0">
                <dt class="col-sm-3">Name</dt>
                <dd class="col-sm-9">@Model.Item.Name</dd>
                <dt class="col-sm-3">Url</dt>
                <dd class="col-sm-9"><a href="@Model.Item.Url" target="_blank">@Model.Item.Url</a></dd>
                <dt class="col-sm-3">Category</dt>
                <dd class="col-sm-9">@Model.CategoryName</dd>
                <dt class="col-sm-3">Visible</dt>
                <dd class="col-sm-9">@(Model.Item.Visible ? "Yes" : "No")</dd>
                <dt class="col-sm-3">Description</dt>
                <dd class="col-sm-9">@Html.Raw(Model.Item.Description)</dd>
                <dt class="col-sm-3">Timestamp</dt>
                <dd class="col-sm-9">@Model.Item.Timestamp</dd>
            </dl>
        }
        else
        {
            <div class="alert alert-warning">Link not found.</div>
        }
    </div>
</div>
