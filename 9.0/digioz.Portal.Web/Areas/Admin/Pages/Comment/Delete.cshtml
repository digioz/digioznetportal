@page "{id}"
@model digioz.Portal.Web.Areas.Admin.Pages.Comment.DeleteModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewBag.Title = "Delete Comment";
    Layout = "/Areas/Admin/Pages/Shared/_LayoutAdmin.cshtml";
}

<div class="card shadow-sm">
    <div class="card-header">Delete Comment</div>
    <div class="card-body">
        <p>Are you sure you want to delete this comment?</p>
        <dl class="row">
            <dt class="col-sm-2">User</dt>
            <dd class="col-sm-10">@Model.Item?.Username</dd>
            <dt class="col-sm-2">Preview</dt>
            <dd class="col-sm-10">@Model.Item?.Body</dd>
            <dt class="col-sm-2">Modified</dt>
            <dd class="col-sm-10">@(Model.Item?.ModifiedDate ?? Model.Item?.CreatedDate)</dd>
        </dl>
        <form method="post">
            <input type="hidden" asp-for="Id" />
            <a asp-area="Admin" asp-page="/Comment/Index" class="btn btn-secondary">Cancel</a>
            <button type="submit" class="btn btn-danger">Delete</button>
        </form>
    </div>
</div>
