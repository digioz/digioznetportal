@page
@model digioz.Portal.Web.Areas.Admin.Pages.Comment.IndexModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewBag.Title = "Comments";
    Layout = "/Areas/Admin/Pages/Shared/_LayoutAdmin.cshtml";
}

<div class="card shadow-sm">
    <div class="card-header d-flex justify-content-between align-items-center">
        <span>Comment Management</span>
    </div>
    <div class="card-body">
        <table class="table table-striped table-sm align-middle">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>User</th>
                    <th>Ref Type</th>
                    <th>Ref Id</th>
                    <th>Preview</th>
                    <th>Modified</th>
                    <th class="text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var c in Model.Items)
                {
                    <tr>
                        <td class="text-truncate" style="max-width:150px">@c.Id</td>
                        <td>@(string.IsNullOrEmpty(c.Username) ? "Anonymous" : c.Username)</td>
                        <td class="text-truncate" style="max-width:140px">@c.ReferenceType</td>
                        <td class="text-truncate" style="max-width:120px">@c.ReferenceId</td>
                        <td class="text-truncate" style="max-width:260px">@c.Body</td>
                        <td>@(c.ModifiedDate ?? c.CreatedDate)</td>
                        <td class="text-end">
                            <a asp-area="Admin" asp-page="/Comment/Edit" asp-route-id="@c.Id" class="btn btn-sm btn-primary">Edit</a>
                            <a asp-area="Admin" asp-page="/Comment/Delete" asp-route-id="@c.Id" class="btn btn-sm btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <nav aria-label="Page navigation">
            <ul class="pagination justify-content-center">
                <li class="page-item @(Model.PageNumber <= 1 ? "disabled" : null)">
                    <a class="page-link" asp-area="Admin" asp-page="/Comment/Index" asp-route-pageNumber="@(Model.PageNumber - 1)" asp-route-pageSize="@Model.PageSize">Previous</a>
                </li>
                @for (var i = 1; i <= Model.TotalPages; i++)
                {
                    <li class="page-item @(i == Model.PageNumber ? "active" : null)">
                        <a class="page-link" asp-area="Admin" asp-page="/Comment/Index" asp-route-pageNumber="@i" asp-route-pageSize="@Model.PageSize">@i</a>
                    </li>
                }
                <li class="page-item @(Model.PageNumber >= Model.TotalPages ? "disabled" : null)">
                    <a class="page-link" asp-area="Admin" asp-page="/Comment/Index" asp-route-pageNumber="@(Model.PageNumber + 1)" asp-route-pageSize="@Model.PageSize">Next</a>
                </li>
            </ul>
        </nav>
    </div>
</div>
