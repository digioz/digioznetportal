@page "{id}"
@model digioz.Portal.Web.Areas.Admin.Pages.SlideShow.EditModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewBag.Title = "Edit Slide";
    Layout = "/Areas/Admin/Pages/Shared/_LayoutAdmin.cshtml";
}

<div class="card shadow-sm">
    <div class="card-header d-flex justify-content-between align-items-center">
        <span>Edit Slide</span>
        <a class="btn btn-sm btn-outline-secondary" asp-area="Admin" asp-page="/SlideShow/Index">Back</a>
    </div>
    <div class="card-body">
        <form method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="Item.Id" />
            <div class="row g-3">
                <div class="col-12">
                    <label asp-for="Item.Description" class="form-label">Description</label>
                    <input asp-for="Item.Description" class="form-control" />
                    <span asp-validation-for="Item.Description" class="text-danger"></span>
                </div>
                @if (!string.IsNullOrEmpty(Model.Item?.Image))
                {
                    <div class="col-12">
                        <label class="form-label">Current Image</label>
                        <div>
                            <a href="~/img/Slides/Full/@Model.Item.Image" target="_blank">
                                <img src="~/img/Slides/Thumb/@Model.Item.Image" alt="@Model.Item.Description" class="img-thumbnail" style="max-width: 200px;" />
                            </a>
                        </div>
                    </div>
                }
                <div class="col-12">
                    <label for="File" class="form-label">@(string.IsNullOrEmpty(Model.Item?.Image) ? "Image" : "Replace Image (Optional)")</label>
                    <input type="file" name="File" id="File" class="form-control" accept=".jpg,.jpeg,.png,.gif,.bmp,.tif,.tiff" />
                    <span asp-validation-for="File" class="text-danger"></span>
                    <div class="form-text">Allowed formats: jpg, png, gif, bmp, tif, tiff. Image will be resized to 850x450 pixels for the slide and 120x120 for thumbnail.</div>
                </div>
            </div>
            <div class="mt-3 d-flex justify-content-end gap-2">
                <a class="btn btn-secondary" asp-area="Admin" asp-page="/SlideShow/Index">Cancel</a>
                <button type="submit" class="btn btn-primary">Save</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
