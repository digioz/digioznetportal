@page "{id}"
@model digioz.Portal.Web.Areas.Admin.Pages.SlideShow.DeleteModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewBag.Title = "Delete Slide";
    Layout = "/Areas/Admin/Pages/Shared/_LayoutAdmin.cshtml";
}

<div class="card shadow-sm">
    <div class="card-header d-flex justify-content-between align-items-center">
        <span>Delete Slide</span>
        <a class="btn btn-sm btn-outline-secondary" asp-area="Admin" asp-page="/SlideShow/Index">Back</a>
    </div>
    <div class="card-body">
        <div class="alert alert-warning">
            <i class="bi bi-exclamation-triangle"></i>
            Are you sure you want to delete this slide? This action cannot be undone.
        </div>
        
        @if (Model.Item != null)
        {
            <div class="row g-3">
                @if (!string.IsNullOrEmpty(Model.Item.Image))
                {
                    <div class="col-12">
                        <label class="form-label fw-bold">Image:</label>
                        <div>
                            <img src="~/img/Slides/Thumb/@Model.Item.Image" alt="@Model.Item.Description" class="img-thumbnail" style="max-width: 200px;" />
                        </div>
                    </div>
                }
                <div class="col-12">
                    <label class="form-label fw-bold">Description:</label>
                    <p>@(string.IsNullOrEmpty(Model.Item.Description) ? "(No description)" : Model.Item.Description)</p>
                </div>
            </div>
        }

        <form method="post">
            <input type="hidden" asp-for="Id" />
            <div class="mt-3 d-flex justify-content-end gap-2">
                <a class="btn btn-secondary" asp-area="Admin" asp-page="/SlideShow/Index">Cancel</a>
                <button type="submit" class="btn btn-danger">Delete</button>
            </div>
        </form>
    </div>
</div>
