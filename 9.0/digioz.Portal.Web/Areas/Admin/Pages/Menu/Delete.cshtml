@page "{id:int}"
@model digioz.Portal.Web.Areas.Admin.Pages.Menu.DeleteModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewBag.Title = "Delete Menu";
    Layout = "/Areas/Admin/Pages/Shared/_LayoutAdmin.cshtml";
}

<div class="card shadow-sm">
    <div class="card-header">Delete Menu</div>
    <div class="card-body">
        <div class="alert alert-warning">Are you sure you want to delete this menu item?</div>
        <dl class="row">
            <dt class="col-sm-2">Name</dt>
            <dd class="col-sm-10">@Model.Item?.Name</dd>
            <dt class="col-sm-2">Location</dt>
            <dd class="col-sm-10">@Model.Item?.Location</dd>
            <dt class="col-sm-2">Url</dt>
            <dd class="col-sm-10">@Model.Item?.Url</dd>
        </dl>
        <form method="post">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">Delete</button>
            <a class="btn btn-secondary" asp-area="Admin" asp-page="/Menu/Index">Cancel</a>
        </form>
    </div>
</div>
