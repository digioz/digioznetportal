@page "{id:int}"
@model digioz.Portal.Web.Areas.Admin.Pages.Menu.EditModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewBag.Title = "Edit Menu";
    Layout = "/Areas/Admin/Pages/Shared/_LayoutAdmin.cshtml";
}

<div class="card shadow-sm">
    <div class="card-header d-flex justify-content-between align-items-center">
        <span>Edit Menu</span>
        <a class="btn btn-sm btn-secondary" asp-area="Admin" asp-page="/Menu/Index">Back</a>
    </div>
    <div class="card-body">
        <form method="post">
            <input type="hidden" asp-for="Item.Id" />
            <div class="row g-3">
                <div class="col-md-6">
                    <label asp-for="Item.Name" class="form-label"></label>
                    <input asp-for="Item.Name" class="form-control" />
                    <span asp-validation-for="Item.Name" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label class="form-label" for="Item_Location">Location</label>
                    <select asp-for="Item.Location" class="form-select" id="Item_Location">
                        <option value="TopMenu">TopMenu</option>
                        <option value="LeftMenu">LeftMenu</option>
                    </select>
                </div>
                <div class="col-md-4">
                    <label asp-for="Item.Controller" class="form-label"></label>
                    <input asp-for="Item.Controller" class="form-control" />
                </div>
                <div class="col-md-4">
                    <label asp-for="Item.Action" class="form-label"></label>
                    <input asp-for="Item.Action" class="form-control" />
                </div>
                <div class="col-md-4">
                    <label asp-for="Item.Url" class="form-label"></label>
                    <input asp-for="Item.Url" class="form-control" />
                </div>
                <div class="col-md-6">
                    <label asp-for="Item.Target" class="form-label"></label>
                    <input asp-for="Item.Target" class="form-control" />
                </div>
                <div class="col-md-6 d-flex align-items-center mt-4">
                    <div class="form-check">
                        <input class="form-check-input" asp-for="Item.Visible" />
                        <label class="form-check-label" asp-for="Item.Visible"></label>
                    </div>
                </div>
            </div>
            <div class="mt-3">
                <button type="submit" class="btn btn-primary">Save</button>
                <a class="btn btn-secondary" asp-area="Admin" asp-page="/Menu/Index">Cancel</a>
            </div>
        </form>
    </div>
</div>
