@model digioz.Portal.Web.Areas.Admin.Pages.Menu.IndexModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewBag.Title = "Menus";
    Layout = "/Areas/Admin/Pages/Shared/_LayoutAdmin.cshtml";
}

<div class="card shadow-sm">
    <div class="card-header d-flex justify-content-between align-items-center">
        <span>Menus</span>
        <a class="btn btn-sm btn-primary" asp-area="Admin" asp-page="/Menu/Add">Add Menu</a>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-sm table-hover mb-0 align-middle" id="menus-table">
                <thead class="table-light">
                    <tr>
                        <th style="width:36px"></th>
                        <th>Name</th>
                        <th>Location</th>
                        <th>Controller</th>
                        <th>Action</th>
                        <th>URL</th>
                        <th class="text-center">Visible</th>
                        <th style="width:220px" class="text-end">Action</th>
                    </tr>
                </thead>
                <tbody id="menus-body">
                    @if (Model.Items.Any())
                    {
                        foreach (var item in Model.Items)
                        {
                            <tr data-id="@item.Id">
                                <td class="text-muted cursor-move"><i class="bi bi-grip-vertical"></i></td>
                                <td>@item.Name</td>
                                <td>@item.Location</td>
                                <td>@item.Controller</td>
                                <td>@item.Action</td>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.Url))
                                    {
                                        <a href="@item.Url" target="_blank" rel="noopener">link</a>
                                    }
                                </td>
                                <td class="text-center">
                                    @if (item.Visible)
                                    {
                                        <span class="badge bg-success">Yes</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">No</span>
                                    }
                                </td>
                                <td class="text-end">
                                    <a class="btn btn-sm btn-outline-primary px-1 py-0 fs-6" asp-area="Admin" asp-page="/Menu/Edit" asp-route-id="@item.Id" title="Edit" aria-label="Edit"><i class="bi bi-pencil"></i></a>
                                    <a class="btn btn-sm btn-outline-danger px-1 py-0 fs-6" asp-area="Admin" asp-page="/Menu/Delete" asp-route-id="@item.Id" title="Delete" aria-label="Delete"><i class="bi bi-trash"></i></a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="8" class="text-center text-muted py-4">No menus found.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="card-footer d-flex justify-content-between align-items-center">
        <small class="text-muted">Page @Model.PageNumber of @Model.TotalPages (@Model.TotalCount total)</small>
        <nav aria-label="Pagination">
            <ul class="pagination mb-0">
                <li class="page-item @(Model.PageNumber <= 1 ? "disabled" : "")">
                    <a class="page-link" asp-area="Admin" asp-page="/Menu/Index" asp-route-pageNumber="@(Model.PageNumber - 1)" asp-route-pageSize="@Model.PageSize">Prev</a>
                </li>
                @for (var p = 1; p <= Model.TotalPages; p++)
                {
                    <li class="page-item @(p == Model.PageNumber ? "active" : "")">
                        <a class="page-link" asp-area="Admin" asp-page="/Menu/Index" asp-route-pageNumber="@p" asp-route-pageSize="@Model.PageSize">@p</a>
                    </li>
                }
                <li class="page-item @(Model.PageNumber >= Model.TotalPages ? "disabled" : "")">
                    <a class="page-link" asp-area="Admin" asp-page="/Menu/Index" asp-route-pageNumber="@(Model.PageNumber + 1)" asp-route-pageSize="@Model.PageSize">Next</a>
                </li>
            </ul>
        </nav>
    </div>
</div>

<form method="post" id="antiforgery">@Html.AntiForgeryToken()</form>

@section Scripts {
    <script>
        (function(){
        const tbody = document.getElementById('menus-body');
        if (!tbody) return;
        let dragSrc;
        tbody.querySelectorAll('tr').forEach(row => {
        row.draggable = true;
        row.addEventListener('dragstart', (e)=>{ dragSrc = row; row.classList.add('table-active'); e.dataTransfer.effectAllowed='move'; });
        row.addEventListener('dragover', (e)=>{ e.preventDefault(); e.dataTransfer.dropEffect='move'; });
        row.addEventListener('drop', (e)=>{
        e.preventDefault();
        if (dragSrc && dragSrc !== row){
        const rows = Array.from(tbody.children);
        const srcIndex = rows.indexOf(dragSrc);
        const dstIndex = rows.indexOf(row);
        if (srcIndex < dstIndex) { tbody.insertBefore(dragSrc, row.nextSibling); }
        else { tbody.insertBefore(dragSrc, row); }
        triggerSave();
        }
        });
        row.addEventListener('dragend', ()=>{ row.classList.remove('table-active'); });
        });
        let saveTimer;
        function triggerSave(){
        clearTimeout(saveTimer);
        saveTimer = setTimeout(saveOrder,250);
        }
        function saveOrder(){
        const orderedIds = Array.from(tbody.querySelectorAll('tr')).map(r => parseInt(r.dataset.id));
        fetch('@Url.Page("/Menu/Index", "Reorder", new { area = "Admin" })',{
        method:'POST',
        headers:{ 'Content-Type':'application/json','RequestVerificationToken':getCsrf() },
        body: JSON.stringify({ orderedIds, pageNumber:@Model.PageNumber, pageSize:@Model.PageSize })
        }).then(r=>r.json()).then(res=>{
        if(!res.ok){ console.error('Reorder failed', res); }
        }).catch(err=>console.error(err));
        }
        function getCsrf(){
        const token = document.querySelector('#antiforgery input[name="__RequestVerificationToken"]');
        return token ? token.value : '';
        }
        })();
    </script>
}
