@page
@model digioz.Portal.Web.Areas.Admin.Pages.Video.VideoAddModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
 ViewBag.Title = "Add Video";
 Layout = "/Areas/Admin/Pages/Shared/_LayoutAdmin.cshtml";
}

<div class="card shadow-sm">
 <div class="card-header">Add Video</div>
 <div class="card-body">
 <form method="post" enctype="multipart/form-data">
 <div class="mb-3">
 <label class="form-label">Album</label>
 <select asp-for="Item.AlbumId" class="form-select">
 @foreach (var a in Model.Albums)
 {
 <option value="@a.Id">@a.Name</option>
 }
 </select>
 </div>
 <div class="mb-3">
 <label class="form-label">Description</label>
 <textarea asp-for="Item.Description" class="form-control"></textarea>
 </div>
 <div class="form-check mb-2">
 <input class="form-check-input" asp-for="Item.Approved" />
 <label class="form-check-label" asp-for="Item.Approved">Approved</label>
 </div>
 <div class="form-check mb-3">
 <input class="form-check-input" asp-for="Item.Visible" />
 <label class="form-check-label" asp-for="Item.Visible">Visible</label>
 </div>
 <div class="mb-3">
 <label class="form-label">Thumbnail image</label>
 <input type="file" class="form-control" asp-for="ThumbnailFile" />
 <span class="text-muted">Allowed image types: jpg, jpeg, png, gif, bmp, tif, tiff</span>
 <span asp-validation-for="ThumbnailFile" class="text-danger"></span>
 </div>
 <div class="mb-3">
 <label class="form-label">Video file</label>
 <input type="file" class="form-control" asp-for="VideoFile" />
 <span class="text-muted">Allowed video types: mp4, mov, avi, wmv, mkv, mpg, mpeg</span>
 <span asp-validation-for="VideoFile" class="text-danger"></span>
 </div>
 <button class="btn btn-primary" type="submit">Save</button>
 <a class="btn btn-secondary" asp-area="Admin" asp-page="/Video/VideoIndex">Cancel</a>
 </form>
 </div>
</div>
