@page
@model digioz.Portal.Web.Areas.Admin.Pages.MailingListCampaign.IndexModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, LazZiya.TagHelpers
@{
    ViewBag.Title = "Campaigns";
    Layout = "/Areas/Admin/Pages/Shared/_LayoutAdmin.cshtml";
}

<partial name="../MailingList/_MailingListNav" />

<div class="card shadow-sm">
    <div class="card-header d-flex justify-content-between align-items-center">
        <span>Campaigns</span>
        <a class="btn btn-sm btn-primary" asp-area="Admin" asp-page="/MailingListCampaign/Add">Add Campaign</a>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-sm table-hover mb-0 align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Name</th>
                        <th>Subject</th>
                        <th>From</th>
                        <th>Visitor Count</th>
                        <th>Date Created</th>
                        <th style="width:300px" class="text-end">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Items.Any())
                    {
                        foreach (var item in Model.Items)
                        {
                            <tr>
                                <td>@item.Name</td>
                                <td>@item.Subject</td>
                                <td>@item.FromName &lt;@item.FromEmail&gt;</td>
                                <td>@item.VisitorCount</td>
                                <td>@item.DateCreated.ToString("yyyy-MM-dd HH:mm")</td>
                                <td class="text-end">
                                    <a class="btn btn-sm btn-outline-success px-1 py-0 fs-6" asp-area="Admin" asp-page="/MailingListCampaign/SendCampaign" asp-route-id="@item.Id" title="Send Campaign" aria-label="Send Campaign">
                                        <i class="bi bi-send"></i>
                                    </a>
                                    <a class="btn btn-sm btn-outline-secondary px-1 py-0 fs-6" asp-area="Admin" asp-page="/MailingListCampaign/Details" asp-route-id="@item.Id" title="Details" aria-label="Details">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a class="btn btn-sm btn-outline-primary px-1 py-0 fs-6" asp-area="Admin" asp-page="/MailingListCampaign/Edit" asp-route-id="@item.Id" title="Edit" aria-label="Edit">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a class="btn btn-sm btn-outline-danger px-1 py-0 fs-6" asp-area="Admin" asp-page="/MailingListCampaign/Delete" asp-route-id="@item.Id" title="Delete" aria-label="Delete">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="text-center text-muted py-4">No campaigns found.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="card-footer d-flex justify-content-between align-items-center">
        <small class="text-muted">Page @Model.PageNumber of @Model.TotalPages (@Model.TotalCount total)</small>
        <paging total-records="@Model.TotalCount"
                page-no="@Model.PageNumber"
                page-size="@Model.PageSize"
                show-prev-next="true"
                show-first-last="true"
                query-string-key-page-no="pageNumber"
                class="pagination mb-0"></paging>
    </div>
</div>
