@page "{id}"
@model digioz.Portal.Web.Areas.Admin.Pages.MailingListCampaign.SendCampaignModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewBag.Title = "Send Campaign";
    Layout = "/Areas/Admin/Pages/Shared/_LayoutAdmin.cshtml";
}

<partial name="../MailingList/_MailingListNav" />

<div class="card shadow-sm">
    <div class="card-header d-flex justify-content-between align-items-center">
        <span>Send Campaign</span>
        <a class="btn btn-sm btn-outline-secondary" asp-area="Admin" asp-page="/MailingListCampaign/Index">Back</a>
    </div>
    <div class="card-body">
        @if (!string.IsNullOrEmpty(Model.StatusMessage))
        {
            <div class="alert @(Model.IsSuccess ? "alert-success" : "alert-danger") alert-dismissible fade show" role="alert">
                @Model.StatusMessage
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        @if (Model.Campaign != null)
        {
            <div class="alert alert-info">
                <h5><i class="bi bi-megaphone"></i> Campaign: @Model.Campaign.Name</h5>
                <p class="mb-0"><strong>Subject:</strong> @Model.Campaign.Subject</p>
                @if (!string.IsNullOrEmpty(Model.MailingListName))
                {
                    <p class="mb-0"><strong>Mailing List:</strong> @Model.MailingListName</p>
                    <p class="mb-0"><strong>Subscribers:</strong> @Model.SubscriberCount active subscriber(s)</p>
                }
                else
                {
                    <p class="mb-0 text-danger"><strong>Warning:</strong> No mailing list assigned to this campaign!</p>
                }
            </div>

            @if (Model.SubscriberCount > 0)
            {
                <form method="post">
                    <div class="mb-3">
                        <label class="form-label">Preview Email Body:</label>
                        <div class="border rounded p-3" style="max-height: 400px; overflow-y: auto;">
                            @Html.Raw(Model.Campaign.Body)
                        </div>
                    </div>

                    <div class="alert alert-warning">
                        <i class="bi bi-exclamation-triangle"></i>
                        <strong>Confirmation Required:</strong> You are about to send this campaign to <strong>@Model.SubscriberCount active subscriber(s)</strong>. This action cannot be undone.
                    </div>

                    <div class="form-check mb-3">
                        <input class="form-check-input" type="checkbox" id="confirmSend" required />
                        <label class="form-check-label" for="confirmSend">
                            I confirm that I want to send this campaign to all active subscribers
                        </label>
                    </div>

                    <div class="d-flex justify-content-end gap-2">
                        <a class="btn btn-secondary" asp-area="Admin" asp-page="/MailingListCampaign/Index">Cancel</a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-send"></i> Send Campaign
                        </button>
                    </div>
                </form>
            }
            else
            {
                <div class="alert alert-warning">
                    <i class="bi bi-exclamation-triangle"></i>
                    There are no active subscribers to send this campaign to. Please add subscribers to the mailing list first.
                </div>
                <a class="btn btn-secondary" asp-area="Admin" asp-page="/MailingListCampaign/Index">Back to Campaigns</a>
            }
        }
    </div>
</div>
