@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Admin Dashboard - @ViewBag.Title</title>
    <!-- Bootstrap 5 CSS (local) -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" asp-append-version="true">
    <style>
        body { min-height: 100vh; }
        .sidebar { min-height: calc(100vh - 56px); }
        .card-placeholder { height: 320px; display: flex; align-items: center; justify-content: center; color: #6c757d; background: repeating-linear-gradient(45deg, #f8f9fa, #f8f9fa 10px, #ffffff 10px, #ffffff 20px); }
        .sidebar .category { border: 0; letter-spacing: .08em; }
    </style>
</head>
<body class="bg-light">
    <!-- Top Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="Admin" asp-page="/Index">Admin</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#adminNavbar" aria-controls="adminNavbar" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="adminNavbar">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item"><a class="nav-link" asp-area="Admin" asp-page="/Index">Dashboard</a></li>
                    <li class="nav-item"><a class="nav-link" asp-area="Admin" asp-page="/Users/Index">Users</a></li>
                    <li class="nav-item"><a class="nav-link" asp-area="Admin" asp-page="/Content/Index">Content</a></li>
                    <li class="nav-item"><a class="nav-link" asp-area="Admin" asp-page="/Settings/Index">Settings</a></li>
                </ul>
                <span class="navbar-text text-white-50">@DateTime.UtcNow.ToString("u")</span>
            </div>
        </div>
    </nav>

    <div class="container-fluid py-3">
        <div class="row g-3">
            <!-- Sidebar -->
            <aside class="col-12 col-lg-3">
                <div class="card shadow-sm sidebar">
                    <div class="card-header fw-semibold">Navigation</div>
                    <div class="list-group list-group-flush">
                        <a class="list-group-item list-group-item-action" asp-area="Admin" asp-page="/Index">Overview</a>

                        <div class="list-group-item fw-semibold text-uppercase small category bg-primary text-white">Content</div>
                        <a class="list-group-item list-group-item-action" asp-area="Admin" asp-page="/Announcement/Index">Announcements</a>
                        <a class="list-group-item list-group-item-action" asp-area="Admin" asp-page="/Page/Index">Pages</a>
                        <a class="list-group-item list-group-item-action" asp-area="Admin" asp-page="/Picture/Index">Pictures</a>
                        <a class="list-group-item list-group-item-action" asp-area="Admin" asp-page="/Video/Index">Videos</a>
                        <a class="list-group-item list-group-item-action" asp-area="Admin" asp-page="/Plugin/Index">Plugins</a>
                        <a class="list-group-item list-group-item-action" asp-area="Admin" asp-page="/Menu/Index">Menus</a>
                        <a class="list-group-item list-group-item-action" asp-area="Admin" asp-page="/Module/Index">Modules</a>

                        <div class="list-group-item fw-semibold text-uppercase small category bg-info text-dark">Communication</div>
                        <a class="list-group-item list-group-item-action" asp-area="Admin" asp-page="/Chat/Index">Chat</a>
                        <a class="list-group-item list-group-item-action" asp-area="Admin" asp-page="/Comment/Index">Comments</a>
                        <a class="list-group-item list-group-item-action" asp-area="Admin" asp-page="/CommentConfig/Index">Comment Config</a>
                        <a class="list-group-item list-group-item-action" asp-area="Admin" asp-page="/MailingList/Index">Mailing Lists</a>
                        <a class="list-group-item list-group-item-action" asp-area="Admin" asp-page="/MailingListSubscriber/Index">Subscribers</a>

                        <div class="list-group-item fw-semibold text-uppercase small category bg-success text-white">Commerce</div>
                        <a class="list-group-item list-group-item-action" asp-area="Admin" asp-page="/Product/Index">Products</a>
                        <a class="list-group-item list-group-item-action" asp-area="Admin" asp-page="/Order/Index">Orders</a>

                        <div class="list-group-item fw-semibold text-uppercase small category bg-warning text-dark">Polls</div>
                        <a class="list-group-item list-group-item-action" asp-area="Admin" asp-page="/Poll/Index">Polls</a>

                        <div class="list-group-item fw-semibold text-uppercase small category bg-secondary text-white">Configuration</div>
                        <a class="list-group-item list-group-item-action" asp-area="Admin" asp-page="/Config/Index">Config</a>
                        <a class="list-group-item list-group-item-action" asp-area="Admin" asp-page="/Link/Index">Links</a>

                        <div class="list-group-item fw-semibold text-uppercase small category bg-dark text-white">Monitoring</div>
                        <a class="list-group-item list-group-item-action" asp-area="Admin" asp-page="/Visitor/Index">Visitors</a>
                        <a class="list-group-item list-group-item-action" asp-area="Admin" asp-page="/Log/Index">Logs</a>

                        <div class="list-group-item fw-semibold text-uppercase small category bg-danger text-white">Users</div>
                        <a class="list-group-item list-group-item-action" asp-area="Admin" asp-page="/UserManager/Index">User Manager</a>
                    </div>
                </div>
            </aside>

            <!-- Main content -->
            <main class="col-12 col-lg-9">
                @RenderBody()
            </main>
        </div>
    </div>

    <footer class="text-center text-muted py-4">
        <small>&copy; @DateTime.UtcNow.Year - Admin Dashboard</small>
    </footer>

    <!-- Bootstrap 5 Bundle JS (local) -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
