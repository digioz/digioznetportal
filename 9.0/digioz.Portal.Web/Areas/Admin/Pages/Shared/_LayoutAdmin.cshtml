                                data-bs-toggle="collapse" data-bs-target="#cat-content" aria-expanded="false" aria-controls="cat-content">
                            Content
                        </button>
                        <div class="list-group-item fw-semibold small category bg-secondary text-white d-none d-lg-block">Content</div>
                        <div id="cat-content" class="collapse d-lg-block">
                            <a class="list-group-item list-group-item-action" asp-area="Admin" asp-page="/Announcement/Index">Announcements</a>
                            <a class="list-group-item list-group-item-action" asp-area="Admin" asp-page="/Page/Index">Pages</a>
                            <a class="list-group-item list-group-item-action" asp-area="Admin" asp-page="/Picture/Index">Pictures</a>
                            <a class="list-group-item list-group-item-action" asp-area="Admin" asp-page="/Video/Index">Videos</a>
                            <a class="list-group-item list-group-item-action" asp-area="Admin" asp-page="/Plugin/Index">Plugins</a>
                            <a class="list-group-item list-group-item-action" asp-area="Admin" asp-page="/Menu/Index">Menus</a>
                            <a class="list-group-item list-group-item-action" asp-area="Admin" asp-page="/Module/Index">Modules</a>
                        </div>

                        <!-- Communication Category -->
                        <button class="list-group-item fw-semibold small category bg-secondary text-white btn d-lg-none" type="button"
                                data-bs-toggle="collapse" data-bs-target="#cat-comm" aria-expanded="false" aria-controls="cat-comm">
                            Communication
                        </button>
                        <div class="list-group-item fw-semibold small category bg-secondary text-white d-none d-lg-block">Communication</div>
                        <div id="cat-comm" class="collapse d-lg-block">
                            <a class="list-group-item list-group-item-action" asp-area="Admin" asp-page="/Chat/Index">Chat</a>
                            <a class="list-group-item list-group-item-action" asp-area="Admin" asp-page="/Comment/Index">Comments</a>
                            <a class="list-group-item list-group-item-action" asp-area="Admin" asp-page="/CommentConfig/Index">Comment Config</a>
                            <a class="list-group-item list-group-item-action" asp-area="Admin" asp-page="/MailingList/Index">Mailing Lists</a>
                            <a class="list-group-item list-group-item-action" asp-area="Admin" asp-page="/MailingListSubscriber/Index">Subscribers</a>
                        </div>

                        <!-- Commerce Category -->
                        <button class="list-group-item fw-semibold small category bg-secondary text-white btn d-lg-none" type="button"
                                data-bs-toggle="collapse" data-bs-target="#cat-commerce" aria-expanded="false" aria-controls="cat-commerce">
                            Commerce
                        </button>
                        <div class="list-group-item fw-semibold small category bg-secondary text-white d-none d-lg-block">Commerce</div>
                        <div id="cat-commerce" class="collapse d-lg-block">
                            <a class="list-group-item list-group-item-action" asp-area="Admin" asp-page="/Product/Index">Products</a>
                            <a class="list-group-item list-group-item-action" asp-area="Admin" asp-page="/Order/Index">Orders</a>
                        </div>

                        <!-- Polls Category -->
                        <button class="list-group-item fw-semibold small category bg-secondary text-white btn d-lg-none" type="button"
                                data-bs-toggle="collapse" data-bs-target="#cat-polls" aria-expanded="false" aria-controls="#cat-polls">
                            Polls
                        </button>
                        <div class="list-group-item fw-semibold small category bg-secondary text-white d-none d-lg-block">Polls</div>
                        <div id="cat-polls" class="collapse d-lg-block">
                            <a class="list-group-item list-group-item-action" asp-area="Admin" asp-page="/Poll/Index">Polls</a>
                        </div>

                        <!-- Configuration Category -->
                        <button class="list-group-item fw-semibold small category bg-secondary text-white btn d-lg-none" type="button"
                                data-bs-toggle="collapse" data-bs-target="#cat-config" aria-expanded="false" aria-controls="#cat-config">
                            Configuration
                        </button>
                        <div class="list-group-item fw-semibold small category bg-secondary text-white d-none d-lg-block">Configuration</div>
                        <div id="cat-config" class="collapse d-lg-block">
                            <a class="list-group-item list-group-item-action" asp-area="Admin" asp-page="/Config/Index">Config</a>
                            <a class="list-group-item list-group-item-action" asp-area="Admin" asp-page="/Link/Index">Links</a>
                        </div>

                        <!-- Monitoring Category -->
                        <button class="list-group-item fw-semibold small category bg-secondary text-white btn d-lg-none" type="button"
                                data-bs-toggle="collapse" data-bs-target="#cat-monitor" aria-expanded="false" aria-controls="#cat-monitor">
                            Monitoring
                        </button>
                        <div class="list-group-item fw-semibold small category bg-secondary text-white d-none d-lg-block">Monitoring</div>
                        <div id="cat-monitor" class="collapse d-lg-block">
                            <a class="list-group-item list-group-item-action" asp-area="Admin" asp-page="/Visitor/Index">Visitors</a>
                            <a class="list-group-item list-group-item-action" asp-area="Admin" asp-page="/Log/Index">Logs</a>
                        </div>

                        <!-- Users Category -->
                        <button class="list-group-item fw-semibold small category bg-secondary text-white btn d-lg-none" type="button"
                                data-bs-toggle="collapse" data-bs-target="#cat-users" aria-expanded="false" aria-controls="#cat-users">
                            Users
                        </button>
                        <div class="list-group-item fw-semibold small category bg-secondary text-white d-none d-lg-block">Users</div>
                        <div id="cat-users" class="collapse d-lg-block">
                            <a class="list-group-item list-group-item-action" asp-area="Admin" asp-page="/UserManager/Index">User Manager</a>
                        </div>
                    </div>
                </div>
            </aside>

            <!-- Main content -->
            <main class="col-12 col-lg-9">
                @RenderBody()
            </main>
        </div>
    </div>

    <footer class="text-center text-muted py-4">
        <small><p>&copy; @DateTime.Now.Year - @configDictionary["SiteName"]</p></small>
    </footer>

    <!-- Bootstrap 5 Bundle JS (local) -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
