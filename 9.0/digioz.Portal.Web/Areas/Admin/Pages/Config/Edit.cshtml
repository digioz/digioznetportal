@page "{id}"
@model digioz.Portal.Web.Areas.Admin.Pages.Config.EditModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
	ViewBag.Title = "Edit Config";
	Layout = "/Areas/Admin/Pages/Shared/_LayoutAdmin.cshtml";
}

<div class="card shadow-sm">
	<div class="card-header d-flex justify-content-between align-items-center">
		<span>Edit Config</span>
		<a class="btn btn-sm btn-outline-secondary" asp-area="Admin" asp-page="/Config/Index">Back</a>
	</div>
	<div class="card-body">
		<form method="post">
			<input type="hidden" asp-for="Item.Id" />
			<input type="hidden" asp-for="OriginalEncryptedValue" />
			<input type="hidden" asp-for="WasEncryptedOnLoad" />
			<div class="row g-3">
				<div class="col-md-6">
					<label asp-for="Item.ConfigKey" class="form-label">Key</label>
					<input asp-for="Item.ConfigKey" class="form-control" />
				</div>
				<div class="col-md-6">
					<label asp-for="Item.ConfigValue" class="form-label">Value</label>
					<input asp-for="Item.ConfigValue" class="form-control" />
					@if (Model.WasEncryptedOnLoad)
					{
						<small class="text-muted">Value is encrypted and hidden. Leave blank to keep the current value.</small>
					}
				</div>
				<div class="col-12">
					<div class="form-check">
						<input asp-for="Item.IsEncrypted" class="form-check-input" />
						<label asp-for="Item.IsEncrypted" class="form-check-label">Encrypted</label>
					</div>
					<span asp-validation-for="Item.IsEncrypted" class="text-danger"></span>
				</div>
			</div>
			<div class="mt-3 d-flex justify-content-end gap-2">
				<button type="submit" class="btn btn-primary">Save</button>
			</div>
		</form>
	</div>
</div>
