@page "{id}"
@model digioz.Portal.Web.Areas.Admin.Pages.Product.EditModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewBag.Title = "Edit Product";
    Layout = "/Areas/Admin/Pages/Shared/_LayoutAdmin.cshtml";
}

<div class="card shadow-sm">
    <div class="card-header d-flex justify-content-between align-items-center">
        <span>Edit Product</span>
        <a class="btn btn-sm btn-outline-secondary" asp-area="Admin" asp-page="/Product/Index">Back</a>
    </div>
    <div class="card-body">
        <form method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="Item.Id" />
            <div class="row g-3">
                <div class="col-md-6">
                    <label asp-for="Item.Name" class="form-label">Name</label>
                    <input asp-for="Item.Name" class="form-control" />
                </div>
                <div class="col-md-6">
                    <label asp-for="Item.Sku" class="form-label">SKU</label>
                    <input asp-for="Item.Sku" class="form-control" />
                </div>
                <div class="col-md-6">
                    <label asp-for="Item.Price" class="form-label">Price</label>
                    <input asp-for="Item.Price" type="number" step="0.01" class="form-control" />
                </div>
                <div class="col-md-6">
                    <label asp-for="Item.ProductCategoryId" class="form-label">Category</label>
                    <select asp-for="Item.ProductCategoryId" class="form-select">
                        <option value="">-- Select Category --</option>
                        @foreach (var category in Model.Categories)
                        {
                            <option value="@category.Id">@category.Name</option>
                        }
                    </select>
                </div>
                <div class="col-md-6">
                    <label asp-for="Item.Make" class="form-label">Make</label>
                    <input asp-for="Item.Make" class="form-control" />
                </div>
                <div class="col-md-6">
                    <label asp-for="Item.Model" class="form-label">Model</label>
                    <input asp-for="Item.Model" class="form-control" />
                </div>
                <div class="col-md-6">
                    <label asp-for="Item.Cost" class="form-label">Cost</label>
                    <input asp-for="Item.Cost" type="number" step="0.01" class="form-control" />
                </div>
                <div class="col-md-6">
                    <label asp-for="Item.Weight" class="form-label">Weight</label>
                    <input asp-for="Item.Weight" class="form-control" />
                </div>
                <div class="col-md-6">
                    <label asp-for="Item.Dimensions" class="form-label">Dimensions</label>
                    <input asp-for="Item.Dimensions" class="form-control" />
                </div>
                <div class="col-md-6">
                    <label asp-for="Item.QuantityPerUnit" class="form-label">Quantity Per Unit</label>
                    <input asp-for="Item.QuantityPerUnit" type="number" class="form-control" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">Image</label>
                    @if (!string.IsNullOrEmpty(Model.Item?.Image))
                    {
                        <div class="mb-2">
                            <img src="/img/Products/Full/@Model.Item.Image" alt="Product Image" style="max-width: 100px; max-height: 100px;" />
                        </div>
                    }
                    <input type="file" name="imageFile" class="form-control" accept="image/*" />
                </div>
                <div class="col-md-6">
                    <label asp-for="Item.UnitsInStock" class="form-label">Units In Stock</label>
                    <input asp-for="Item.UnitsInStock" type="number" class="form-control" />
                </div>
                <div class="col-12">
                    <label asp-for="Item.ShortDescription" class="form-label">Short Description</label>
                    <input asp-for="Item.ShortDescription" class="form-control" />
                </div>
                <div class="col-12">
                    <label asp-for="Item.Description" class="form-label">Description</label>
                    <textarea asp-for="Item.Description" class="form-control" id="editor" rows="10"></textarea>
                </div>
                <div class="col-md-6">
                    <label asp-for="Item.PartNumber" class="form-label">Part Number</label>
                    <input asp-for="Item.PartNumber" class="form-control" />
                </div>
                <div class="col-md-6">
                    <label asp-for="Item.ManufacturerUrl" class="form-label">Manufacturer URL</label>
                    <input asp-for="Item.ManufacturerUrl" class="form-control" />
                </div>
                <div class="col-12">
                    <label asp-for="Item.Notes" class="form-label">Notes</label>
                    <textarea asp-for="Item.Notes" class="form-control" rows="4"></textarea>
                </div>
                <div class="col-12">
                    <div class="form-check">
                        <input asp-for="Item.Visible" class="form-check-input" />
                        <label asp-for="Item.Visible" class="form-check-label">Visible</label>
                    </div>
                </div>
                <div class="col-12">
                    <div class="form-check">
                        <input asp-for="Item.OutOfStock" class="form-check-input" />
                        <label asp-for="Item.OutOfStock" class="form-check-label">Out Of Stock</label>
                    </div>
                </div>
            </div>

            <!-- Product Options Section -->
            <div class="mt-5">
                <h5 class="mb-3">Product Options</h5>
                <div class="table-responsive">
                    <table class="table table-sm table-bordered" id="optionsTable">
                        <thead class="table-light">
                            <tr>
                                <th>Option Type</th>
                                <th>Option Value</th>
                                <th style="width: 100px;" class="text-center">Action</th>
                            </tr>
                        </thead>
                        <tbody id="optionsTableBody">
                            @foreach (var option in Model.ProductOptions)
                            {
                                <tr class="option-row" data-option-id="@option.Id">
                                    <td><input type="text" class="form-control option-type" value="@option.OptionType" /></td>
                                    <td><input type="text" class="form-control option-value" value="@option.OptionValue" /></td>
                                    <td class="text-center">
                                        <button type="button" class="btn btn-sm btn-outline-danger remove-option" title="Remove">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <button type="button" class="btn btn-sm btn-secondary" id="addOptionBtn">Add Option</button>
            </div>

            <div class="mt-3 d-flex justify-content-end gap-2">
                <button type="submit" class="btn btn-primary">Save</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <!-- Use local CKEditor from lib/static files -->
    <script src="~/lib/ckeditor/build/ckeditor.js" asp-append-version="true"></script>
    <script>
        // inject CSS rule to make CKEditor editable area keep a minimum height even after focus
        if (!document.getElementById('ck-minheight-style')) {
            var st = document.createElement('style');
            st.id = 'ck-minheight-style';
            st.innerHTML = '.ck-editor__editable_inline { min-height:30em !important; }';
            document.head.appendChild(st);
        }

        (function waitForCK() {
            if (!window.ClassicEditor) return setTimeout(waitForCK, 50);
            ClassicEditor
                .create(document.querySelector('#editor'))
                .then(editor => {
                    window.__ck = editor;
                    // set editor editable area min-height to roughly 30 lines (fallback)
                    try { editor.ui.view.editable.element.style.minHeight = '30em'; } catch (e) { }
                    const form = document.querySelector('form');
                    form.addEventListener('submit', function () {
                        // copy HTML from the editor into the textarea so it will be posted
                        const html = editor.getData();
                        document.getElementById('editor').value = html;
                    });
                });
        })();

        // Product Options Management
        document.getElementById('addOptionBtn').addEventListener('click', function (e) {
            e.preventDefault();
            const tableBody = document.getElementById('optionsTableBody');
            const newId = 'new_' + Date.now();
            const newRow = document.createElement('tr');
            newRow.className = 'option-row';
            newRow.dataset.optionId = newId;
            newRow.innerHTML = `
                <td><input type="text" class="form-control option-type" /></td>
                <td><input type="text" class="form-control option-value" /></td>
                <td class="text-center">
                    <button type="button" class="btn btn-sm btn-outline-danger remove-option" title="Remove">
                        <i class="bi bi-trash"></i>
                    </button>
                </td>
            `;
            tableBody.appendChild(newRow);
            attachRemoveHandler(newRow.querySelector('.remove-option'));
        });

        function attachRemoveHandler(button) {
            button.addEventListener('click', function (e) {
                e.preventDefault();
                const row = this.closest('tr');
                row.remove();
            });
        }

        // Attach remove handlers to existing rows
        document.querySelectorAll('.remove-option').forEach(btn => {
            attachRemoveHandler(btn);
        });

        // Handle form submission to collect options data
        document.querySelector('form').addEventListener('submit', function (e) {
            const optionRows = document.querySelectorAll('#optionsTableBody .option-row');
            const productId = document.querySelector('input[name="Item.Id"]').value;

            // Add hidden inputs for options to be submitted
            optionRows.forEach((row, index) => {
                const optionType = row.querySelector('.option-type').value;
                const optionValue = row.querySelector('.option-value').value;
                const optionId = row.dataset.optionId;

                // Create hidden inputs for submission
                const typeInput = document.createElement('input');
                typeInput.type = 'hidden';
                typeInput.name = `OptionsData[${index}].Id`;
                typeInput.value = optionId;
                this.appendChild(typeInput);

                const typeInput2 = document.createElement('input');
                typeInput2.type = 'hidden';
                typeInput2.name = `OptionsData[${index}].OptionType`;
                typeInput2.value = optionType;
                this.appendChild(typeInput2);

                const valueInput = document.createElement('input');
                valueInput.type = 'hidden';
                valueInput.name = `OptionsData[${index}].OptionValue`;
                valueInput.value = optionValue;
                this.appendChild(valueInput);

                const productIdInput = document.createElement('input');
                productIdInput.type = 'hidden';
                productIdInput.name = `OptionsData[${index}].ProductId`;
                productIdInput.value = productId;
                this.appendChild(productIdInput);
            });
        });
    </script>
}
