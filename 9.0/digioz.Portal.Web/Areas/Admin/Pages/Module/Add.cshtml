@page
@model digioz.Portal.Web.Areas.Admin.Pages.Module.AddModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewBag.Title = "Add Module";
    Layout = "/Areas/Admin/Pages/Shared/_LayoutAdmin.cshtml";
}

<div class="card shadow-sm">
    <div class="card-header d-flex justify-content-between align-items-center">
        <span>Add Module</span>
        <a class="btn btn-sm btn-outline-secondary" asp-area="Admin" asp-page="/Module/Index">Back</a>
    </div>
    <div class="card-body">
        <form method="post">
            <div class="row g-3">
                <div class="col-md-6">
                    <label asp-for="Item.Title" class="form-label">Title</label>
                    <input asp-for="Item.Title" class="form-control" />
                </div>
                <div class="col-md-6">
                    <label class="form-label" for="Item_Location">Location</label>
                    <select asp-for="Item.Location" class="form-select" id="Item_Location">
                        <option value="Top">Top</option>
                        <option value="Left">Left</option>
                        <option value="BodyTop">BodyTop</option>
                        <option value="BodyBottom">BodyBottom</option>
                        <option value="Bottom">Bottom</option>
                    </select>
                </div>
                <div class="col-12">
                    <label asp-for="Item.Body" class="form-label">Body</label>
                    <textarea asp-for="Item.Body" class="form-control" rows="6"></textarea>
                </div>
                <div class="col-md-6">
                    <div class="form-check mt-2">
                        <input asp-for="Item.Visible" class="form-check-input" />
                        <label asp-for="Item.Visible" class="form-check-label">Visible</label>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-check mt-2">
                        <input asp-for="Item.DisplayInBox" class="form-check-input" />
                        <label asp-for="Item.DisplayInBox" class="form-check-label">Display In Box</label>
                    </div>
                </div>
            </div>
            <div class="mt-3 d-flex justify-content-end gap-2">
                <button type="submit" class="btn btn-primary">Save</button>
            </div>
        </form>
    </div>
</div>
