@page "{id}"
@model digioz.Portal.Web.Areas.Admin.Pages.PollAnswer.EditModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewBag.Title = "Edit Answer";
    Layout = "/Areas/Admin/Pages/Shared/_LayoutAdmin.cshtml";
}

<h1 class="mt-4">Edit Answer</h1>
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item">Admin</li>
    <li class="breadcrumb-item"><a asp-page="Index" asp-route-PollId="@Model.Item.PollId">Answers</a></li>
    <li class="breadcrumb-item active">Edit</li>
</ol>

<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Item.Id" />

    <div class="mb-3">
        <label class="form-label">Poll</label>
        <select class="form-select" asp-for="Item.PollId" asp-items="@(new SelectList(Model.Polls, nameof(digioz.Portal.Bo.Poll.Id), nameof(digioz.Portal.Bo.Poll.Slug), Model.Item.PollId))"></select>
    </div>

    <div class="mb-3">
        <label class="form-label">Choose Existing Answer</label>
        <select class="form-select">
            @foreach (var a in Model.AnswersForPoll)
            {
                <option value="@a.Id">@a.Answer</option>
            }
        </select>
        <small class="form-text text-muted">Or edit the answer text below.</small>
    </div>

    <div class="mb-3">
        <label asp-for="Item.Answer" class="form-label"></label>
        <input asp-for="Item.Answer" class="form-control" />
        <span asp-validation-for="Item.Answer" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a class="btn btn-secondary" asp-page="Index" asp-route-PollId="@Model.Item.PollId">Cancel</a>
</form>
