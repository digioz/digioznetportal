@page
@model digioz.Portal.Web.Areas.Admin.Pages.PollAnswer.AddModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewBag.Title = "Add Answer";
    Layout = "/Areas/Admin/Pages/Shared/_LayoutAdmin.cshtml";
}

<h1 class="mt-4">Add Answer</h1>
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item">Admin</li>
    <li class="breadcrumb-item"><a asp-page="Index" asp-route-PollId="@Model.Item.PollId">Answers</a></li>
    <li class="breadcrumb-item active">Add</li>
</ol>

<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="mb-3">
        <label class="form-label">Poll</label>
        <select class="form-select" asp-for="Item.PollId" asp-items="@(new SelectList(Model.Polls, nameof(digioz.Portal.Bo.Poll.Id), nameof(digioz.Portal.Bo.Poll.Slug), Model.Item.PollId))">
            <option value="">-- Select a Poll --</option>
        </select>
        <span asp-validation-for="Item.PollId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Item.Answer" class="form-label"></label>
        <input asp-for="Item.Answer" class="form-control" maxlength="200" />
        <span asp-validation-for="Item.Answer" class="text-danger"></span>
        <small class="form-text text-muted">Maximum 200 characters.</small>
    </div>

    <button type="submit" class="btn btn-primary">Add Answer</button>
    <a class="btn btn-secondary" asp-page="Index" asp-route-PollId="@Model.Item.PollId">Cancel</a>
</form>
