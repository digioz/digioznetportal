@page "{id}"
@model digioz.Portal.Web.Areas.Admin.Pages.PollAnswer.DeleteModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewBag.Title = "Delete Answer";
    Layout = "/Areas/Admin/Pages/Shared/_LayoutAdmin.cshtml";
}

<h1 class="mt-4">Delete Answer</h1>
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item">Admin</li>
    <li class="breadcrumb-item"><a asp-page="Index">Answers</a></li>
    <li class="breadcrumb-item active">Delete</li>
</ol>

<form method="post">
    <input type="hidden" asp-for="Id" />
    <p>Are you sure you want to delete this answer and all related votes? This may also remove the users' vote record for the poll.</p>
    <button type="submit" class="btn btn-danger">Delete</button>
    <a class="btn btn-secondary" asp-page="Index">Cancel</a>
</form>
