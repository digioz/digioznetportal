@page "{id}"
@model digioz.Portal.Web.Areas.Admin.Pages.PollAnswer.DeleteModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewBag.Title = "Delete Answer";
    Layout = "/Areas/Admin/Pages/Shared/_LayoutAdmin.cshtml";
}

<h1 class="mt-4">Delete Answer</h1>
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item">Admin</li>
    <li class="breadcrumb-item"><a asp-page="Index" asp-route-PollId="@Model.PollId">Answers</a></li>
    <li class="breadcrumb-item active">Delete</li>
</ol>

<div class="alert alert-warning">
    <h5 class="alert-heading"><i class="fas fa-exclamation-triangle"></i> Warning</h5>
    <p>Deleting this answer will:</p>
    <ul class="mb-0">
        <li>Remove all votes cast for this specific answer</li>
        <li>Remove user vote records for users who voted ONLY for this answer (users who also voted for other answers will retain their vote status)</li>
    </ul>
</div>

<form method="post">
    <input type="hidden" asp-for="Id" />
    <p><strong>Are you sure you want to delete this answer?</strong></p>
    <p class="text-muted">This action cannot be undone.</p>
    <button type="submit" class="btn btn-danger">Delete Answer</button>
    <a class="btn btn-secondary" asp-page="Index" asp-route-PollId="@Model.PollId">Cancel</a>
</form>
