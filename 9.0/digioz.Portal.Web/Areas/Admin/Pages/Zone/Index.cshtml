@page
@model digioz.Portal.Web.Areas.Admin.Pages.Zone.IndexModel
@addTagHelper *, LazZiya.TagHelpers
@{
	ViewBag.Title = "Zones";
	Layout = "/Areas/Admin/Pages/Shared/_LayoutAdmin.cshtml";
}

<div class="card shadow-sm">
	<div class="card-header d-flex justify-content-between align-items-center">
		<span class="fw-semibold">Zones</span>
		<a asp-area="Admin" asp-page="/Zone/Add" class="btn btn-sm btn-primary"><i class="bi bi-plus-lg"></i> Add Zone</a>
	</div>
	<div class="table-responsive">
		<table class="table table-striped align-middle mb-0">
			<thead>
				<tr>
					<th>Name</th>
					<th>Location</th>
					<th>Visible</th>
					<th>Updated</th>
					<th class="text-end">Actions</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var z in Model.Zones)
				{
					<tr>
						<td>@z.Name</td>
						<td>@z.Location</td>
						<td>@(z.Visible ? "Yes" : "No")</td>
						<td>@z.Timestamp.ToLocalTime().ToString("g")</td>
						<td class="text-end">
							<div class="btn-group" role="group" aria-label="Actions">
								<a asp-area="Admin" asp-page="/Zone/Details" asp-route-id="@z.Id" class="btn btn-sm btn-outline-primary" title="Details" aria-label="Details">
									<i class="bi bi-eye"></i>
								</a>
								<a asp-area="Admin" asp-page="/Zone/Edit" asp-route-id="@z.Id" class="btn btn-sm btn-outline-secondary" title="Edit" aria-label="Edit">
									<i class="bi bi-pencil-square"></i>
								</a>
								<a asp-area="Admin" asp-page="/Zone/Delete" asp-route-id="@z.Id" class="btn btn-sm btn-outline-danger" title="Delete" aria-label="Delete">
									<i class="bi bi-trash"></i>
								</a>
							</div>
						</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
	<div class="card-footer d-flex justify-content-between align-items-center">
		<small class="text-muted">Page @Model.PageNumber of @Model.TotalPages (@Model.TotalCount total)</small>
		<paging total-records="@Model.TotalCount"
				page-no="@Model.PageNumber"
				page-size="@Model.PageSize"
				show-prev-next="true"
				show-first-last="true"
				query-string-key-page-no="pageNumber"
				class="pagination mb-0"></paging>
	</div>
</div>
