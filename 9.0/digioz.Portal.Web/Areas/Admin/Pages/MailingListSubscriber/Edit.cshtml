@page "{id}"
@model digioz.Portal.Web.Areas.Admin.Pages.MailingListSubscriber.EditModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewBag.Title = "Edit Subscriber";
    Layout = "/Areas/Admin/Pages/Shared/_LayoutAdmin.cshtml";
}

<partial name="../MailingList/_MailingListNav" />

<div class="card shadow-sm">
    <div class="card-header d-flex justify-content-between align-items-center">
        <span>Edit Subscriber</span>
        <a class="btn btn-sm btn-outline-secondary" asp-area="Admin" asp-page="/MailingListSubscriber/Index">Back</a>
    </div>
    <div class="card-body">
        <form method="post">
            <input type="hidden" asp-for="Item.Id" />
            <input type="hidden" asp-for="Item.DateCreated" />
            <div class="row g-3">
                <div class="col-md-12">
                    <label asp-for="Item.Email" class="form-label">Email</label>
                    <input asp-for="Item.Email" class="form-control" type="email" required />
                </div>
                <div class="col-md-6">
                    <label asp-for="Item.FirstName" class="form-label">First Name</label>
                    <input asp-for="Item.FirstName" class="form-control" />
                </div>
                <div class="col-md-6">
                    <label asp-for="Item.LastName" class="form-label">Last Name</label>
                    <input asp-for="Item.LastName" class="form-control" />
                </div>
                <div class="col-12">
                    <div class="form-check">
                        <input asp-for="Item.Status" class="form-check-input" />
                        <label asp-for="Item.Status" class="form-check-label">Active</label>
                    </div>
                </div>
            </div>
            <div class="mt-3 d-flex justify-content-end gap-2">
                <button type="submit" class="btn btn-primary">Save</button>
            </div>
        </form>
    </div>
</div>
