@page
@model digioz.Portal.Web.Areas.Admin.Pages.RssManager.AddModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewBag.Title = "Add RSS";
    Layout = "/Areas/Admin/Pages/Shared/_LayoutAdmin.cshtml";
}

<div class="card shadow-sm">
    <div class="card-header d-flex justify-content-between align-items-center">
        <span>Add RSS</span>
        <a class="btn btn-sm btn-outline-secondary" asp-area="Admin" asp-page="/RssManager/Index">Back</a>
    </div>
    <div class="card-body">
        <form method="post" novalidate>
            <div class="row g-3">
                <div class="col-md-6">
                    <label asp-for="Item.Name" class="form-label">Name</label>
                    <input asp-for="Item.Name" class="form-control" />
                    <span class="text-danger" asp-validation-for="Item.Name"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="Item.Url" class="form-label">Feed URL</label>
                    <input asp-for="Item.Url" class="form-control" />
                    <span class="text-danger" asp-validation-for="Item.Url"></span>
                </div>
                <div class="col-md-4">
                    <label asp-for="Item.MaxCount" class="form-label">Max Count</label>
                    <input asp-for="Item.MaxCount" class="form-control" type="number" min="1" max="100" />
                    <span class="text-danger" asp-validation-for="Item.MaxCount"></span>
                </div>
            </div>
            <div class="mt-3 d-flex justify-content-end gap-2">
                <button type="submit" class="btn btn-primary">Save</button>
            </div>
        </form>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
