@page "{id:int}"
@model digioz.Portal.Web.Areas.Admin.Pages.RssManager.DeleteModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewBag.Title = "Delete RSS";
    Layout = "/Areas/Admin/Pages/Shared/_LayoutAdmin.cshtml";
}

<div class="card shadow-sm">
    <div class="card-header d-flex justify-content-between align-items-center">
        <span>Delete RSS</span>
        <a class="btn btn-sm btn-outline-secondary" asp-area="Admin" asp-page="/RssManager/Index">Back</a>
    </div>
    <div class="card-body">
        @if (Model.Item != null)
        {
            <div class="alert alert-danger">
                Are you sure you want to delete the RSS feed "@Model.Item.Name"?
            </div>
            <dl class="row">
                <dt class="col-sm-2">Name</dt>
                <dd class="col-sm-10">@Model.Item.Name</dd>
                <dt class="col-sm-2">URL</dt>
                <dd class="col-sm-10"><a href="@Model.Item.Url" target="_blank" rel="noopener noreferrer">@Model.Item.Url</a></dd>
                <dt class="col-sm-2">Max</dt>
                <dd class="col-sm-10">@Model.Item.MaxCount</dd>
            </dl>
            <form method="post">
                <button type="submit" class="btn btn-danger">Delete</button>
            </form>
        }
    </div>
</div>
