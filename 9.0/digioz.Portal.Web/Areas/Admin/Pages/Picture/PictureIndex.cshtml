@page
@model digioz.Portal.Web.Areas.Admin.Pages.Picture.PictureIndexModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewBag.Title = "Picture Manager";
    Layout = "/Areas/Admin/Pages/Shared/_LayoutAdmin.cshtml";
}

<div class="card shadow-sm">
    <div class="card-header d-flex justify-content-between align-items-center">
        <span>Picture Manager</span>
        <a class="btn btn-sm btn-primary" asp-area="Admin" asp-page="/Picture/PictureAdd">Add Picture</a>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-sm table-hover mb-0 align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Id</th>
                        <th style="width:140px">Image</th>
                        <th>Album</th>
                        <th>Description</th>
                        <th class="text-center">Approved</th>
                        <th class="text-center">Visible</th>
                        <th style="width:180px">Timestamp</th>
                        <th style="width:200px" class="text-end">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Items.Any())
                    {
                        foreach (var item in Model.Items)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.Thumbnail))
                                    {
                                        <a href="/img/Pictures/Full/@item.Filename" target="_blank" rel="noopener">
                                            <img src="/img/Pictures/Thumb/@item.Thumbnail" alt="thumb"
                                                 class="img-thumbnail" style="width:120px;height:120px;object-fit:cover" />
                                        </a>
                                    }
                                </td>
                                <td>@(Model.AlbumNames.TryGetValue(item.AlbumId, out var name) ? name : "-")</td>
                                <td>@item.Description</td>
                                <td class="text-center">@(item.Approved ? "Yes" : "No")</td>
                                <td class="text-center">@(item.Visible ? "Yes" : "No")</td>
                                <td>@item.Timestamp?.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</td>
                                <td class="text-end">
                                    <a class="btn btn-sm btn-outline-primary px-1 py-0" asp-area="Admin" asp-page="/Picture/PictureEdit" asp-route-id="@item.Id">Edit</a>
                                    <a class="btn btn-sm btn-outline-danger px-1 py-0" asp-area="Admin" asp-page="/Picture/PictureDelete" asp-route-id="@item.Id">Delete</a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="8" class="text-center text-muted py-4">No pictures found.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="card-footer d-flex justify-content-between align-items-center">
        <small class="text-muted">Page @Model.PageNumber of @Model.TotalPages (@Model.TotalCount total)</small>
        <nav aria-label="Pagination">
            <ul class="pagination mb-0">
                <li class="page-item @(Model.PageNumber <= 1 ? "disabled" : "")">
                    <a class="page-link" asp-area="Admin" asp-page="/Picture/PictureIndex" asp-route-pageNumber="@(Model.PageNumber - 1)" asp-route-pageSize="@Model.PageSize">Prev</a>
                </li>
                @if (Model.TotalPages <= 10)
                {
                    for (var p = 1; p <= Model.TotalPages; p++)
                    {
                        <li class="page-item @(p == Model.PageNumber ? "active" : "")">
                            <a class="page-link" asp-area="Admin" asp-page="/Picture/PictureIndex" asp-route-pageNumber="@p" asp-route-pageSize="@Model.PageSize">@p</a>
                        </li>
                    }
                }
                else
                {
                    for (var p = 1; p <= 5; p++)
                    {
                        <li class="page-item @(p == Model.PageNumber ? "active" : "")">
                            <a class="page-link" asp-area="Admin" asp-page="/Picture/PictureIndex" asp-route-pageNumber="@p" asp-route-pageSize="@Model.PageSize">@p</a>
                        </li>
                    }
                    <li class="page-item disabled"><span class="page-link">...</span></li>
                    var start = Model.TotalPages - 4;
                    if (start < 6) { start = 6; }
                    for (var p = start; p <= Model.TotalPages; p++)
                    {
                        <li class="page-item @(p == Model.PageNumber ? "active" : "")">
                            <a class="page-link" asp-area="Admin" asp-page="/Picture/PictureIndex" asp-route-pageNumber="@p" asp-route-pageSize="@Model.PageSize">@p</a>
                        </li>
                    }
                }
                <li class="page-item @(Model.PageNumber >= Model.TotalPages ? "disabled" : "")">
                    <a class="page-link" asp-area="Admin" asp-page="/Picture/PictureIndex" asp-route-pageNumber="@(Model.PageNumber + 1)" asp-route-pageSize="@Model.PageSize">Next</a>
                </li>
            </ul>
        </nav>
    </div>
</div>
