@page "{id}"
@model digioz.Portal.Web.Areas.Admin.Pages.Poll.DetailsModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewBag.Title = "Poll Details";
    Layout = "/Areas/Admin/Pages/Shared/_LayoutAdmin.cshtml";
}

<h1 class="mt-4">Poll Details</h1>
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item">Admin</li>
    <li class="breadcrumb-item"><a asp-page="Index">Poll</a></li>
    <li class="breadcrumb-item active">Details</li>
</ol>

<div class="card mb-3">
    <div class="card-header">Info</div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Poll Question</dt>
            <dd class="col-sm-9">@Model.Item.Slug</dd>
            <dt class="col-sm-3">Featured</dt>
            <dd class="col-sm-9">@(Model.Item.Featured ? "Yes" : "No")</dd>
            <dt class="col-sm-3">Closed</dt>
            <dd class="col-sm-9">@(Model.Item.IsClosed ? "Yes" : "No")</dd>
            <dt class="col-sm-3">Allow Multiple</dt>
            <dd class="col-sm-9">@(Model.Item.AllowMultipleOptionsVote ? "Yes" : "No")</dd>
        </dl>
    </div>
</div>

<div class="card mb-3">
    <div class="card-header">Vote</div>
    <div class="card-body">
        @if (Model.HasVoted)
        {
            <div class="alert alert-info">You have already voted for this poll.</div>
        }
        else
        {
            <form method="post" asp-page-handler="Vote" asp-route-id="@Model.Item.Id">
                <div class="mb-2">
                    @if (Model.Item.AllowMultipleOptionsVote)
                    {
                        foreach (var a in Model.Answers)
                        {
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" name="SelectedAnswerIds" value="@a.Id" id="a_@a.Id">
                                <label class="form-check-label" for="a_@a.Id">@a.Answer</label>
                            </div>
                        }
                    }
                    else
                    {
                        foreach (var a in Model.Answers)
                        {
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="SelectedAnswerIds" value="@a.Id" id="a_@a.Id">
                                <label class="form-check-label" for="a_@a.Id">@a.Answer</label>
                            </div>
                        }
                    }
                </div>
                <button type="submit" class="btn btn-primary">Submit Vote</button>
            </form>
        }
    </div>
</div>

<div class="card mb-3">
    <div class="card-header">Results</div>
    <div class="card-body">
        @if (!string.IsNullOrEmpty(Model.ResultsChartBase64))
        {
            <img class="img-fluid" src="data:image/png;base64,@Model.ResultsChartBase64" alt="Poll Results" />
        }
        else
        {
            <p class="text-muted">No results available.</p>
        }
    </div>
</div>

<div class="card">
    <div class="card-header">Answers</div>
    <div class="card-body">
        @if (Model.Answers?.Count > 0)
        {
            <ul class="list-group">
                @foreach (var a in Model.Answers)
                {
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        @a.Answer
                        <span>
                            <a class="btn btn-sm btn-warning" asp-page="../PollAnswer/Edit" asp-route-id="@a.Id">Edit</a>
                            <a class="btn btn-sm btn-danger" asp-page="../PollAnswer/Delete" asp-route-id="@a.Id">Delete</a>
                        </span>
                    </li>
                }
            </ul>
        }
        else
        {
            <p class="text-muted">No answers defined yet.</p>
        }
        <div class="mt-3">
            <a class="btn btn-primary" asp-page="../PollAnswer/Add" asp-route-PollId="@Model.Item.Id">Add Answer</a>
        </div>
    </div>
</div>
