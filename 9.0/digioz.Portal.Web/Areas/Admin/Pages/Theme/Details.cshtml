@page
@model digioz.Portal.Web.Areas.Admin.Pages.Theme.DetailsModel
@{
    ViewData["Title"] = "Theme Details";
    Layout = "/Areas/Admin/Pages/Shared/_LayoutAdmin.cshtml";
}

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <span><i class="fas fa-eye me-1"></i> Theme Details</span>
        <div>
            <a asp-page="Edit" asp-route-id="@Model.Theme.Id" class="btn btn-sm btn-warning">
                <i class="fas fa-edit"></i> Edit
            </a>
            <a asp-page="Delete" asp-route-id="@Model.Theme.Id" class="btn btn-sm btn-danger">
                <i class="fas fa-trash"></i> Delete
            </a>
        </div>
    </div>
    <div class="card-body">
        <div class="mb-3">
            @if (Model.Theme.IsDefault)
            {
                <span class="badge bg-success">Default Theme</span>
            }
        </div>
        
        <dl class="row">
            <dt class="col-sm-3">Theme ID</dt>
            <dd class="col-sm-9">@Model.Theme.Id</dd>

            <dt class="col-sm-3">Name</dt>
            <dd class="col-sm-9">@Model.Theme.Name</dd>

            <dt class="col-sm-3">Is Default</dt>
            <dd class="col-sm-9">
                @if (Model.Theme.IsDefault)
                {
                    <span class="badge bg-success">Yes</span>
                }
                else
                {
                    <span class="badge bg-secondary">No</span>
                }
            </dd>

            <dt class="col-sm-3">Created Date</dt>
            <dd class="col-sm-9">@Model.Theme.CreateDate.ToString("MMMM dd, yyyy h:mm tt")</dd>

            <dt class="col-sm-3">CSS Body</dt>
            <dd class="col-sm-9">
                <div class="card">
                    <div class="card-body">
                        <pre style="max-height: 400px; overflow-y: auto; background-color: #f5f5f5; padding: 15px; border-radius: 5px;"><code>@Model.Theme.Body</code></pre>
                    </div>
                </div>
            </dd>
        </dl>
    </div>
    <div class="card-footer">
        <a asp-page="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to List
        </a>
        <a asp-page="Edit" asp-route-id="@Model.Theme.Id" class="btn btn-warning">
            <i class="fas fa-edit"></i> Edit
        </a>
        <a asp-page="Delete" asp-route-id="@Model.Theme.Id" class="btn btn-danger">
            <i class="fas fa-trash"></i> Delete
        </a>
    </div>
</div>
