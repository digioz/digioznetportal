@page
@model digioz.Portal.Web.Areas.Admin.Pages.Theme.IndexModel
@{
    ViewData["Title"] = "Theme Manager";
    Layout = "/Areas/Admin/Pages/Shared/_LayoutAdmin.cshtml";
}

<h1>Theme Manager</h1>

<p>
    <a asp-page="Add" class="btn btn-primary">Create New Theme</a>
</p>

@if (Model.StatusMessage != null)
{
    <div class="alert alert-info alert-dismissible fade show" role="alert">
        @Model.StatusMessage
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="card">
    <div class="card-header">
        <i class="fas fa-table me-1"></i>
        All Themes
    </div>
    <div class="card-body">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Is Default</th>
                    <th>Created Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Themes != null && Model.Themes.Any())
                {
                    @foreach (var theme in Model.Themes)
                    {
                        <tr>
                            <td>@theme.Name</td>
                            <td>
                                @if (theme.IsDefault)
                                {
                                    <span class="badge bg-success">Default</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">No</span>
                                }
                            </td>
                            <td>@theme.CreateDate.ToString("MM/dd/yyyy")</td>
                            <td>
                                <a asp-page="Details" asp-route-id="@theme.Id" class="btn btn-sm btn-info" title="View Details">
                                    <i class="fas fa-eye"></i> Details
                                </a>
                                <a asp-page="Edit" asp-route-id="@theme.Id" class="btn btn-sm btn-warning" title="Edit">
                                    <i class="fas fa-edit"></i> Edit
                                </a>
                                @if (!theme.IsDefault)
                                {
                                    <form method="post" asp-page-handler="SetDefault" asp-route-id="@theme.Id" style="display: inline;">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-sm btn-success" title="Set as Default" onclick="return confirm('Are you sure you want to set this theme as default?');">
                                            <i class="fas fa-check-circle"></i> Set Default
                                        </button>
                                    </form>
                                }
                                <a asp-page="Delete" asp-route-id="@theme.Id" class="btn btn-sm btn-danger" title="Delete">
                                    <i class="fas fa-trash"></i> Delete
                                </a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="4" class="text-center">No themes found.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
