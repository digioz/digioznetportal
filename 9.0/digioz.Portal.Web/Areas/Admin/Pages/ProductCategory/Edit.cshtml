@page "{id}"
@model digioz.Portal.Web.Areas.Admin.Pages.ProductCategory.EditModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewBag.Title = "Edit Product Category";
    Layout = "/Areas/Admin/Pages/Shared/_LayoutAdmin.cshtml";
}

<div class="card shadow-sm">
    <div class="card-header d-flex justify-content-between align-items-center">
        <span>Edit Product Category</span>
        <a class="btn btn-sm btn-outline-secondary" asp-area="Admin" asp-page="/ProductCategory/Index">Back</a>
    </div>
    <div class="card-body">
        <form method="post">
            <input type="hidden" asp-for="Item.Id" />
            <div class="row g-3">
                <div class="col-12">
                    <label asp-for="Item.Name" class="form-label">Name</label>
                    <input asp-for="Item.Name" class="form-control" />
                </div>
                <div class="col-12">
                    <label asp-for="Item.Description" class="form-label">Description</label>
                    <textarea asp-for="Item.Description" class="form-control" id="editor" rows="30"></textarea>
                </div>
                <div class="col-12">
                    <div class="form-check">
                        <input asp-for="Item.Visible" class="form-check-input" />
                        <label asp-for="Item.Visible" class="form-check-label">Visible</label>
                    </div>
                </div>
            </div>
            <div class="mt-3 d-flex justify-content-end gap-2">
                <button type="submit" class="btn btn-primary">Save</button>
            </div>
        </form>
    </div>
</div>

@section Scripts
{
    <!-- Use local CKEditor from lib/static files -->
    <script src="~/lib/ckeditor/build/ckeditor.js" asp-append-version="true"></script>
    <script>
        // inject CSS rule to make CKEditor editable area keep a minimum height even after focus
        if (!document.getElementById('ck-minheight-style')) {
            var st = document.createElement('style');
            st.id = 'ck-minheight-style';
            st.innerHTML = '.ck-editor__editable_inline { min-height:30em !important; }';
            document.head.appendChild(st);
        }

        (function waitForCK() {
            if (!window.ClassicEditor) return setTimeout(waitForCK,50);
                ClassicEditor
                .create(document.querySelector('#editor'))
                .then(editor => {
                        window.__ck = editor;
                        // set editor editable area min-height to roughly 30 lines (fallback)
                        try { editor.ui.view.editable.element.style.minHeight = '30em'; } catch(e){}
                        const form = document.querySelector('form');
                        form.addEventListener('submit', function () {
                            // copy HTML from the editor into the textarea so it will be posted
                            const html = editor.getData();
                            document.getElementById('editor').value = html;
                        });
                });
        })();
    </script>
}
