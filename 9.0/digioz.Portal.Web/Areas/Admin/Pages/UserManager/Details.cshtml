@page
@model digioz.Portal.Web.Areas.Admin.Pages.UserManager.DetailsModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewBag.Title = "User Details";
    Layout = "/Areas/Admin/Pages/Shared/_LayoutAdmin.cshtml";
}

<div class="card shadow-sm">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">User Details</h5>
        <div>
            <a asp-page="/UserManager/Edit" asp-route-id="@Model.User?.Id" class="btn btn-sm btn-warning">
                <i class="bi bi-pencil"></i> Edit
            </a>
            <a asp-page="/UserManager/Index" class="btn btn-sm btn-secondary">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
        </div>
    </div>
    <div class="card-body">
        @if (Model.User != null)
        {
            <div class="row">
                <div class="col-md-6">
                    <h6 class="text-muted mb-3">Account Information</h6>
                    <dl class="row">
                        <dt class="col-sm-4">User ID</dt>
                        <dd class="col-sm-8"><code>@Model.User.Id</code></dd>

                        <dt class="col-sm-4">Username</dt>
                        <dd class="col-sm-8">@Model.User.UserName</dd>

                        <dt class="col-sm-4">Email</dt>
                        <dd class="col-sm-8">@Model.User.Email</dd>

                        <dt class="col-sm-4">Email Confirmed</dt>
                        <dd class="col-sm-8">
                            @if (Model.User.EmailConfirmed)
                            {
                                <span class="badge bg-success">Yes</span>
                            }
                            else
                            {
                                <span class="badge bg-warning">No</span>
                            }
                        </dd>

                        <dt class="col-sm-4">Phone Number</dt>
                        <dd class="col-sm-8">@(Model.User.PhoneNumber ?? "-")</dd>

                        <dt class="col-sm-4">Phone Confirmed</dt>
                        <dd class="col-sm-8">
                            @if (Model.User.PhoneNumberConfirmed)
                            {
                                <span class="badge bg-success">Yes</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">No</span>
                            }
                        </dd>

                        <dt class="col-sm-4">Two-Factor Enabled</dt>
                        <dd class="col-sm-8">
                            @if (Model.User.TwoFactorEnabled)
                            {
                                <span class="badge bg-success">Yes</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">No</span>
                            }
                        </dd>

                        <dt class="col-sm-4">Lockout Enabled</dt>
                        <dd class="col-sm-8">
                            @if (Model.User.LockoutEnabled)
                            {
                                <span class="badge bg-warning">Yes</span>
                            }
                            else
                            {
                                <span class="badge bg-success">No</span>
                            }
                        </dd>

                        <dt class="col-sm-4">Lockout End</dt>
                        <dd class="col-sm-8">@(Model.User.LockoutEnd?.ToString("yyyy-MM-dd HH:mm") ?? "-")</dd>

                        <dt class="col-sm-4">Access Failed Count</dt>
                        <dd class="col-sm-8">@Model.User.AccessFailedCount</dd>
                    </dl>
                </div>

                <div class="col-md-6">
                    <h6 class="text-muted mb-3">Profile Information</h6>
                    @if (Model.Profile != null)
                    {
                        <dl class="row">
                            <dt class="col-sm-4">Display Name</dt>
                            <dd class="col-sm-8">@(Model.Profile.DisplayName ?? "-")</dd>

                            <dt class="col-sm-4">First Name</dt>
                            <dd class="col-sm-8">@(Model.Profile.FirstName ?? "-")</dd>

                            <dt class="col-sm-4">Middle Name</dt>
                            <dd class="col-sm-8">@(Model.Profile.MiddleName ?? "-")</dd>

                            <dt class="col-sm-4">Last Name</dt>
                            <dd class="col-sm-8">@(Model.Profile.LastName ?? "-")</dd>

                            <dt class="col-sm-4">Birthday</dt>
                            <dd class="col-sm-8">
                                @if (Model.Profile.Birthday.HasValue)
                                {
                                    @Model.Profile.Birthday.Value.ToString("yyyy-MM-dd")
                                    @if (Model.Profile.BirthdayVisible == true)
                                    {
                                        <span class="badge bg-info">Public</span>
                                    }
                                }
                                else
                                {
                                    <text>-</text>
                                }
                            </dd>

                            <dt class="col-sm-4">Address</dt>
                            <dd class="col-sm-8">@(Model.Profile.Address ?? "-")</dd>

                            <dt class="col-sm-4">Address 2</dt>
                            <dd class="col-sm-8">@(Model.Profile.Address2 ?? "-")</dd>

                            <dt class="col-sm-4">City</dt>
                            <dd class="col-sm-8">@(Model.Profile.City ?? "-")</dd>

                            <dt class="col-sm-4">State</dt>
                            <dd class="col-sm-8">@(Model.Profile.State ?? "-")</dd>

                            <dt class="col-sm-4">Zip</dt>
                            <dd class="col-sm-8">@(Model.Profile.Zip ?? "-")</dd>

                            <dt class="col-sm-4">Country</dt>
                            <dd class="col-sm-8">@(Model.Profile.Country ?? "-")</dd>

                            <dt class="col-sm-4">Avatar</dt>
                            <dd class="col-sm-8">
                                @if (!string.IsNullOrEmpty(Model.Profile.Avatar))
                                {
                                    <img src="~/img/Avatar/Thumb/@Model.Profile.Avatar" alt="Avatar" class="img-thumbnail" style="max-width: 100px;" />
                                }
                                else
                                {
                                    <text>-</text>
                                }
                            </dd>

                            <dt class="col-sm-4">Signature</dt>
                            <dd class="col-sm-8">@(Model.Profile.Signature ?? "-")</dd>
                        </dl>
                    }
                    else
                    {
                        <p class="text-muted">No profile information available.</p>
                    }
                </div>
            </div>

            <hr class="my-4" />

            <div class="row">
                <div class="col-md-12">
                    <h6 class="text-muted mb-3">Roles</h6>
                    @if (Model.UserRoles.Any())
                    {
                        <div>
                            @foreach (var role in Model.UserRoles)
                            {
                                <span class="badge bg-primary me-1">@role</span>
                            }
                        </div>
                        <div class="mt-2">
                            <a asp-page="/UserManager/Roles" asp-route-id="@Model.User.Id" class="btn btn-sm btn-secondary">
                                <i class="bi bi-shield-lock"></i> Manage Roles
                            </a>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted">No roles assigned.</p>
                        <a asp-page="/UserManager/Roles" asp-route-id="@Model.User.Id" class="btn btn-sm btn-secondary">
                            <i class="bi bi-shield-lock"></i> Assign Roles
                        </a>
                    }
                </div>
            </div>
        }
        else
        {
            <div class="alert alert-warning">
                <i class="bi bi-exclamation-triangle"></i> User not found.
            </div>
        }
    </div>
</div>
