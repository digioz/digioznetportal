@page "{id:int}"
@model digioz.Portal.Web.Areas.Admin.Pages.Announcement.DetailsModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewBag.Title = "Announcement Details";
    Layout = "/Areas/Admin/Pages/Shared/_LayoutAdmin.cshtml";
}

<div class="card shadow-sm">
    <div class="card-header d-flex justify-content-between align-items-center">
        <span>Announcement Details</span>
        <a class="btn btn-sm btn-outline-secondary" asp-area="Admin" asp-page="/Announcement/Index">Back</a>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Title</dt>
            <dd class="col-sm-9">@Model.Item?.Title</dd>
            <dt class="col-sm-3">Body</dt>
            <dd class="col-sm-9">@Html.Raw(Model.Item?.Body)</dd>
            <dt class="col-sm-3">Visible</dt>
            <dd class="col-sm-9">@(Model.Item?.Visible == true ? "Yes" : "No")</dd>
            <dt class="col-sm-3">Timestamp</dt>
            <dd class="col-sm-9">@Model.Item?.Timestamp?.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</dd>
        </dl>
    </div>
</div>
