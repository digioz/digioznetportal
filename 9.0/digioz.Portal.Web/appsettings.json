{
    "ConnectionStrings": {
        "DefaultConnection": "Server=localhost;Database=digiozPortal9;Trusted_Connection=True;MultipleActiveResultSets=true;TrustServerCertificate=True"
    },
    "Logging": {
        "LogLevel": {
            "Default": "Warning",
            "Microsoft.AspNetCore": "Warning"
        }
    },
    "DbLogger": {
        // Supported logging levels: Trace, Debug, Information, Warning, Error, Critical, None
        "MinLevel": "Warning",
        "IncludeScopes": false
    },
    // Please change the cookie name and duration for your site
    "Session": {
        "CookieName": ".digiozPortal.Session",
        "IdleTimeoutMinutes": 20
    },
    // Please change this key to a unique value for your site
    "SiteEncryptionKey": "[Enter Site Key]",
    "AllowedHosts": "*",
    "Kestrel": {
        "Limits": {
            "MaxRequestBodySize": 2147483648,
            "RequestHeadersTimeout": "00:05:00"
        }
    },
    // Chunked upload settings for large video files (to work with Cloudflare 100MB limit)
    "ChunkedUpload": {
        "ChunkSizeInMB": 2,
        "MaxChunks": 5000,
        "ChunkExpirationMinutes": 60,
        "MaxRetries": 5,
        "RetryDelayMs": 2000,
        "ChunkDelayMs": 1500
    }
}
