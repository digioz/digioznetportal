@model digioz.Portal.Bo.Config

@{
    ViewBag.Title = "Delete Configuration";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container">
	<div class="row">
		<div class="col-12">
			<h2>Delete Configuration</h2>

			<h3>Are you sure you want to delete this?</h3>
			<div>
				<h4>Config</h4>
				<hr />
				<dl class="dl-horizontal">
					<dt>
						@Html.DisplayNameFor(model => model.ConfigKey)
					</dt>

					<dd>
						@Html.DisplayFor(model => model.ConfigKey)
					</dd>

					<dt>
						@Html.DisplayNameFor(model => model.ConfigValue)
					</dt>

					<dd>
						@if (Model.IsEncrypted)
						{
							<span>[XXX]</span>
						}
						else
						{
							@Html.DisplayFor(model => model.ConfigValue)
						}
					</dd>

				</dl>

				@using (Html.BeginForm())
				{
					@Html.AntiForgeryToken()

					<div class="form-actions no-color">
						<input type="submit" value="Delete" class="btn btn-primary" /> |
						@Html.ActionLink("Back to List", "Index")
					</div>
				}
			</div>
		</div>
	</div>
</div>


