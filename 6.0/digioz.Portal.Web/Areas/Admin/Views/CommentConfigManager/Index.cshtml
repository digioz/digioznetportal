@model IEnumerable<digioz.Portal.Bo.CommentConfig>

@{
    ViewBag.Title = "Enable Comments";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<main>
	<div class="container-fluid">
		<div class="card mb-4">
			<div class="card-header">
				<h2>Enable Comments</h2>
			</div>
			<div class="card-body">
				<p>
					<a class="btn btn-sm btn-primary" href="@Url.Action("Create", "CommentConfigManager", new { area = "Admin" })">Create New</a>
				</p>

				<table class="table">
					<tr>
						<th>
							@Html.DisplayNameFor(model => model.ReferenceType)
						</th>
						<th>
							@Html.DisplayNameFor(model => model.ReferenceTitle)
						</th>
						<th>
							@Html.DisplayNameFor(model => model.Visible)
						</th>
						<th></th>
					</tr>

					@foreach (var item in Model)
					{
						<tr>
							<td>
								@Html.DisplayFor(modelItem => item.ReferenceType)
							</td>
							<td>
								@Html.DisplayFor(modelItem => item.ReferenceTitle)
							</td>
							<td>
								@Html.DisplayFor(modelItem => item.Visible)
							</td>
							<td style="width:100px;">
								<a href="@Url.Action("Details", new { id = item.Id })"><img class="sb-nav-link-icon" src="~/img/images/icons/16x16/Search.png" alt="Details" /></a>
								<a href="@Url.Action("Edit", new { id = item.Id })"><img class="sb-nav-link-icon" src="~/img/images/icons/16x16/Edit.png" alt="Edit" /></a>
								<a href="@Url.Action("Delete", new { id = item.Id })"><img class="sb-nav-link-icon" src="~/img/images/icons/16x16/Cancel.png" alt="Delete" /></a>
							</td>
						</tr>
					}

				</table>

				<div>
					@Html.ActionLink("Back to Comment Menu", "Index", "CommentManager")
				</div>
			</div>
		</div>
	</div>
</main>


